---
import { Icon } from "astro-icon/components";
import Button from '../ui/Button.astro';

interface Location {
  name: string;
  address: string;
  phone: string;
  email: string;
  hours: string;
  mapUrl: string;
  image: string;
  features: string[];
}

const locations: Location[] = [
  {
    name: "Quito - Oficina Principal",
    address: "Av. Amazonas N24-03 y Colón, Edificio Carpio, Piso 5",
    phone: "+593 2 256 3478",
    email: "quito@constructoracarpio.com",
    hours: "Lun - Vie: 8:00 AM - 6:00 PM",
    mapUrl: "https://goo.gl/maps/example1",
    image: "/images/placeholder-image-1.png",
    features: ["Oficina Principal", "Showroom", "Sala de Reuniones", "Estacionamiento"]
  },
  {
    name: "Guayaquil - Sucursal",
    address: "Av. Francisco de Orellana 100, World Trade Center, Torre B",
    phone: "+593 4 268 9124",
    email: "guayaquil@constructoracarpio.com", 
    hours: "Lun - Vie: 8:30 AM - 5:30 PM",
    mapUrl: "https://goo.gl/maps/example2",
    image: "/images/placeholder-image-2.png",
    features: ["Oficina Regional", "Depósito", "Centro de Servicio", "Parqueadero"]
  },
  {
    name: "Cuenca - Representación",
    address: "Calle Gran Colombia 7-87 y Luis Cordero, Centro Histórico",
    phone: "+593 7 282 1456",
    email: "cuenca@constructoracarpio.com",
    hours: "Lun - Vie: 9:00 AM - 5:00 PM",
    mapUrl: "https://goo.gl/maps/example3", 
    image: "/images/placeholder-image.png",
    features: ["Oficina Regional", "Atención al Cliente", "Consultoría", "Punto de Venta"]
  }
];
---

<section class="py-20 bg-gradient-to-br from-gray-50 via-white to-slate-100 relative overflow-hidden" id="locations">
  <!-- Background decorations -->
  <div class="absolute inset-0">
    <div class="absolute top-20 right-20 w-40 h-40 bg-primary-green/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 left-20 w-32 h-32 bg-blue-500/5 rounded-full blur-2xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <!-- Section Header -->
    <div class="text-center max-w-4xl mx-auto mb-16" data-aos="fade-up">
      <div class="inline-flex items-center gap-2 bg-primary-green/10 backdrop-blur-sm border border-primary-green/20 rounded-full px-4 py-2 mb-6">
        <Icon name="ph:map-pin-fill" class="w-5 h-5 text-primary-green" />
        <span class="text-primary-green font-semibold text-sm">Nuestras Ubicaciones</span>
      </div>
      
      <h2 class="text-4xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
        Cerca de Ti en Todo <span class="text-green-600">Ecuador</span>
      </h2>
      
      <p class="text-xl text-gray-600 leading-relaxed">
        Contamos con oficinas estratégicamente ubicadas para brindarte un mejor servicio en las principales ciudades del país
      </p>
    </div>

    <!-- Locations Grid -->
    <div class="grid lg:grid-cols-3 gap-8 mb-16">
      {locations.map((location, index) => (
        <div 
          class="group bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-200/50 hover:border-primary-green/30"
          data-aos="fade-up" 
          data-aos-delay={100 * (index + 1)}
        >
          <!-- Location Image -->
          <div class="relative h-48 overflow-hidden">
            <img 
              src={location.image} 
              alt={location.name}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent"></div>
            
            <!-- Location Badge -->
            <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm rounded-xl px-3 py-2">
              <div class="flex items-center gap-2">
                <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
                <span class="text-sm font-semibold text-gray-900">Activa</span>
              </div>
            </div>

            <!-- Quick Actions -->
            <div class="absolute top-4 right-4 flex gap-2">
              <a 
                href={location.mapUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-white/90 backdrop-blur-sm rounded-xl flex items-center justify-center hover:bg-white transition-colors group/btn"
              >
                <Icon name="ph:map-pin" class="w-5 h-5 text-gray-700 group-hover/btn:text-primary-green transition-colors" />
              </a>
              <a 
                href={`tel:${location.phone}`}
                class="w-10 h-10 bg-white/90 backdrop-blur-sm rounded-xl flex items-center justify-center hover:bg-white transition-colors group/btn"
              >
                <Icon name="ph:phone" class="w-5 h-5 text-gray-700 group-hover/btn:text-blue-500 transition-colors" />
              </a>
            </div>
          </div>

          <!-- Location Content -->
          <div class="p-6 space-y-6">
            <!-- Header -->
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary-green transition-colors">
                {location.name}
              </h3>
              <div class="flex items-start gap-2 text-gray-600">
                <Icon name="ph:map-pin" class="w-5 h-5 text-primary-green mt-0.5 flex-shrink-0" />
                <span class="text-sm leading-relaxed">{location.address}</span>
              </div>
            </div>

            <!-- Contact Info -->
            <div class="space-y-3">
              <div class="flex items-center gap-3">
                <Icon name="ph:phone" class="w-5 h-5 text-blue-500" />
                <a href={`tel:${location.phone}`} class="text-sm font-medium text-gray-900 hover:text-blue-500 transition-colors">
                  {location.phone}
                </a>
              </div>
              
              <div class="flex items-center gap-3">
                <Icon name="ph:envelope" class="w-5 h-5 text-purple-500" />
                <a href={`mailto:${location.email}`} class="text-sm font-medium text-gray-900 hover:text-purple-500 transition-colors">
                  {location.email}
                </a>
              </div>
              
              <div class="flex items-center gap-3">
                <Icon name="ph:clock" class="w-5 h-5 text-orange-500" />
                <span class="text-sm text-gray-600">{location.hours}</span>
              </div>
            </div>

            <!-- Features -->
            <div>
              <h4 class="text-sm font-semibold text-gray-900 mb-3">Servicios Disponibles:</h4>
              <div class="flex flex-wrap gap-2">
                {location.features.map((feature) => (
                  <span class="px-3 py-1 bg-primary-green/10 text-primary-green text-xs font-medium rounded-full">
                    {feature}
                  </span>
                ))}
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex gap-3 pt-2">
              <Button 
                variant="success" 
                size="sm" 
                href={location.mapUrl}
                target="_blank"
                class="flex-1"
                iconPosition="left"
                icon="ph:navigation-arrow"
              >
                Ver Mapa
              </Button>
              <Button 
                variant="outline" 
                size="sm" 
                href={`tel:${location.phone}`}
                class="flex-1"
                iconPosition="left"
                icon="ph:phone"
              >
                Llamar
              </Button>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Interactive Map Section -->
    <div class="bg-white rounded-3xl p-8 shadow-lg border border-gray-200/50" data-aos="fade-up" data-aos-delay="400">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Map Info -->
        <div class="space-y-6">
          <div>
            <h3 class="text-3xl font-bold text-gray-900 mb-4">
              Ubicaciones <span class="text-primary-green">Estratégicas</span>
            </h3>
            <p class="text-gray-600 leading-relaxed">
              Nuestras oficinas están ubicadas en puntos estratégicos de las principales ciudades del Ecuador para ofrecerte la mejor atención y estar siempre cerca cuando nos necesites.
            </p>
          </div>

          <!-- Coverage Stats -->
          <div class="grid grid-cols-2 gap-6">
            <div class="text-center p-4 bg-green-50 rounded-2xl border border-green-200">
              <div class="text-3xl font-bold text-green-600 mb-1">3</div>
              <div class="text-sm text-gray-600">Oficinas</div>
            </div>
            <div class="text-center p-4 bg-blue-50 rounded-2xl border border-blue-200">
              <div class="text-3xl font-bold text-blue-600 mb-1">24</div>
              <div class="text-sm text-gray-600">Provincias</div>
            </div>
            <div class="text-center p-4 bg-purple-50 rounded-2xl border border-purple-200">
              <div class="text-3xl font-bold text-purple-600 mb-1">100+</div>
              <div class="text-sm text-gray-600">Ciudades</div>
            </div>
            <div class="text-center p-4 bg-orange-50 rounded-2xl border border-orange-200">
              <div class="text-3xl font-bold text-orange-600 mb-1">15k+</div>
              <div class="text-sm text-gray-600">Clientes</div>
            </div>
          </div>

          <!-- Quick Contact -->
          <div class="bg-green-600 rounded-2xl p-6 text-white">
            <h4 class="font-bold mb-2">¿No encuentras una oficina cerca?</h4>
            <p class="text-green-100 text-sm mb-4">También brindamos servicios a domicilio en todo el país</p>
            <Button variant="outline" href="#form" class="border-white text-white hover:bg-white hover:text-green-600" iconPosition="left" icon="ph:house-fill">
              Solicitar Visita
            </Button>
          </div>
        </div>

        <!-- Interactive Map Placeholder -->
        <div class="relative">
          <div class="bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl h-96 flex items-center justify-center relative overflow-hidden">
            <!-- Map Background Pattern -->
            <div class="absolute inset-0 opacity-10">
              <svg class="w-full h-full" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                <defs>
                  <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
                    <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5"/>
                  </pattern>
                </defs>
                <rect width="100" height="100" fill="url(#grid)" />
              </svg>
            </div>

            <!-- Map Placeholder Content -->
            <div class="text-center space-y-4 relative z-10">
              <div class="w-16 h-16 bg-green-600 rounded-2xl flex items-center justify-center mx-auto">
                <Icon name="ph:map-trifold-fill" class="w-8 h-8 text-white" />
              </div>
              <div>
                <h4 class="font-bold text-gray-900 mb-2">Mapa Interactivo</h4>
                <p class="text-gray-600 text-sm mb-4">Explora nuestras ubicaciones</p>
                <Button variant="success" href="https://maps.google.com" target="_blank" iconPosition="left" icon="ph:map-pin">
                  Ver en Google Maps
                </Button>
              </div>
            </div>

            <!-- Location Pins -->
            <div class="absolute top-4 left-4 w-6 h-6 bg-green-600 rounded-full flex items-center justify-center animate-pulse">
              <Icon name="ph:map-pin-fill" class="w-4 h-4 text-white" />
            </div>
            <div class="absolute top-12 right-8 w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center animate-pulse" style="animation-delay: 0.5s;">
              <Icon name="ph:map-pin-fill" class="w-4 h-4 text-white" />
            </div>
            <div class="absolute bottom-8 left-1/3 w-6 h-6 bg-purple-600 rounded-full flex items-center justify-center animate-pulse" style="animation-delay: 1s;">
              <Icon name="ph:map-pin-fill" class="w-4 h-4 text-white" />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Service Areas -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mt-12" data-aos="fade-up" data-aos-delay="500">
      <div class="text-center p-6 bg-white rounded-2xl shadow-md hover:shadow-lg transition-shadow border border-gray-100">
        <div class="w-12 h-12 bg-green-600 rounded-xl flex items-center justify-center mx-auto mb-4">
          <Icon name="ph:buildings-fill" class="w-6 h-6 text-white" />
        </div>
        <h4 class="font-bold text-gray-900 mb-2">Costa</h4>
        <p class="text-sm text-gray-600">Guayaquil, Manta, Machala y más</p>
      </div>

      <div class="text-center p-6 bg-white rounded-2xl shadow-md hover:shadow-lg transition-shadow border border-gray-100">
        <div class="w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center mx-auto mb-4">
          <Icon name="ph:mountains-fill" class="w-6 h-6 text-white" />
        </div>
        <h4 class="font-bold text-gray-900 mb-2">Sierra</h4>
        <p class="text-sm text-gray-600">Quito, Cuenca, Ambato y más</p>
      </div>

      <div class="text-center p-6 bg-white rounded-2xl shadow-md hover:shadow-lg transition-shadow border border-gray-100">
        <div class="w-12 h-12 bg-emerald-600 rounded-xl flex items-center justify-center mx-auto mb-4">
          <Icon name="ph:tree-fill" class="w-6 h-6 text-white" />
        </div>
        <h4 class="font-bold text-gray-900 mb-2">Oriente</h4>
        <p class="text-sm text-gray-600">Puyo, Tena, Macas y más</p>
      </div>

      <div class="text-center p-6 bg-white rounded-2xl shadow-md hover:shadow-lg transition-shadow border border-gray-100">
        <div class="w-12 h-12 bg-purple-600 rounded-xl flex items-center justify-center mx-auto mb-4">
          <Icon name="ph:island-fill" class="w-6 h-6 text-white" />
        </div>
        <h4 class="font-bold text-gray-900 mb-2">Galápagos</h4>
        <p class="text-sm text-gray-600">Proyectos especiales</p>
      </div>
    </div>
  </div>
</section>
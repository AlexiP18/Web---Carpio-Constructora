---
/**
 * TeamBlock.astro
 * Bloque de Equipo
 */
import CloudinaryImage from '@/components/ui/CloudinaryImage.astro';

interface TeamMember {
  name: string;
  position?: string;
  bio?: string;
  photo?: string;
  linkedin?: string;
  email?: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  layout?: 'grid' | 'carousel';
  members?: TeamMember[];
}

const {
  title,
  subtitle,
  layout = 'grid',
  members = [],
} = Astro.props;
---

<section class="py-16 md:py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    {/* Header */}
    {(title || subtitle) && (
      <div class="text-center mb-12">
        {title && (
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            {title}
          </h2>
        )}
        {subtitle && (
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>
    )}
    
    {/* Team Grid */}
    <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
      {members.map((member) => (
        <article class="group text-center">
          {/* Photo */}
          <div class="relative mb-4 overflow-hidden rounded-xl aspect-square">
            {member.photo ? (
              <CloudinaryImage
                src={member.photo}
                alt={member.name}
                width={300}
                height={300}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
            ) : (
              <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                <svg class="w-20 h-20 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
            )}
            
            {/* Social Overlay */}
            {(member.linkedin || member.email) && (
              <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center gap-4">
                {member.linkedin && (
                  <a
                    href={member.linkedin}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 bg-white rounded-full flex items-center justify-center hover:bg-primary-500 hover:text-white transition-colors"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                    </svg>
                  </a>
                )}
                {member.email && (
                  <a
                    href={`mailto:${member.email}`}
                    class="w-10 h-10 bg-white rounded-full flex items-center justify-center hover:bg-primary-500 hover:text-white transition-colors"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </a>
                )}
              </div>
            )}
          </div>
          
          {/* Info */}
          <h3 class="text-lg font-semibold text-gray-900">{member.name}</h3>
          {member.position && (
            <p class="text-primary-500 font-medium text-sm mb-2">{member.position}</p>
          )}
          {member.bio && (
            <p class="text-gray-600 text-sm">{member.bio}</p>
          )}
        </article>
      ))}
    </div>
    
    {members.length === 0 && (
      <div class="text-center py-12">
        <p class="text-gray-500">No hay miembros del equipo configurados.</p>
      </div>
    )}
  </div>
</section>

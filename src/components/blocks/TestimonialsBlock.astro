---
/**
 * TestimonialsBlock.astro
 * Bloque de Testimonios con m√∫ltiples layouts
 */
import CloudinaryImage from '@/components/ui/CloudinaryImage.astro';

interface Testimonial {
  quote: string;
  author?: string;
  position?: string;
  avatar?: string;
  rating?: number;
}

interface Props {
  title?: string;
  subtitle?: string;
  layout?: 'carousel' | 'grid' | 'single';
  items?: Testimonial[];
}

const {
  title,
  subtitle,
  layout = 'carousel',
  items = [],
} = Astro.props;
---

<section class="py-16 md:py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4">
    {/* Header */}
    {(title || subtitle) && (
      <div class="text-center mb-12">
        {title && (
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            {title}
          </h2>
        )}
        {subtitle && (
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>
    )}
    
    {/* Carousel Layout */}
    {layout === 'carousel' && items.length > 0 && (
      <div class="relative overflow-hidden" id="testimonials-carousel">
        <div class="flex transition-transform duration-300" id="testimonials-track">
          {items.map((testimonial, index) => (
            <div class="w-full flex-shrink-0 px-4" data-index={index}>
              <blockquote class="bg-white rounded-2xl p-8 shadow-lg max-w-3xl mx-auto">
                {/* Stars */}
                {testimonial.rating && (
                  <div class="flex gap-1 mb-4">
                    {[...Array(5)].map((_, i) => (
                      <svg
                        class={`w-5 h-5 ${i < testimonial.rating! ? 'text-yellow-400' : 'text-gray-300'}`}
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                    ))}
                  </div>
                )}
                
                {/* Quote */}
                <p class="text-lg md:text-xl text-gray-700 italic mb-6">
                  "{testimonial.quote}"
                </p>
                
                {/* Author */}
                <footer class="flex items-center gap-4">
                  {testimonial.avatar ? (
                    <CloudinaryImage
                      src={testimonial.avatar}
                      alt={testimonial.author || 'Cliente'}
                      width={48}
                      height={48}
                      class="w-12 h-12 rounded-full object-cover"
                    />
                  ) : (
                    <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
                      <span class="text-primary-600 font-semibold text-lg">
                        {testimonial.author?.charAt(0) || 'C'}
                      </span>
                    </div>
                  )}
                  <div>
                    {testimonial.author && (
                      <cite class="font-semibold text-gray-900 not-italic">
                        {testimonial.author}
                      </cite>
                    )}
                    {testimonial.position && (
                      <p class="text-sm text-gray-500">{testimonial.position}</p>
                    )}
                  </div>
                </footer>
              </blockquote>
            </div>
          ))}
        </div>
        
        {/* Navigation Dots */}
        {items.length > 1 && (
          <div class="flex justify-center gap-2 mt-8" id="testimonials-dots">
            {items.map((_, index) => (
              <button
                class={`w-3 h-3 rounded-full transition-colors ${index === 0 ? 'bg-primary-500' : 'bg-gray-300'}`}
                data-index={index}
                aria-label={`Ir al testimonio ${index + 1}`}
              />
            ))}
          </div>
        )}
      </div>
    )}
    
    {/* Grid Layout */}
    {layout === 'grid' && (
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {items.map((testimonial) => (
          <blockquote class="bg-white rounded-xl p-6 shadow-md">
            {testimonial.rating && (
              <div class="flex gap-1 mb-3">
                {[...Array(5)].map((_, i) => (
                  <svg
                    class={`w-4 h-4 ${i < testimonial.rating! ? 'text-yellow-400' : 'text-gray-300'}`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
            )}
            <p class="text-gray-700 italic mb-4">"{testimonial.quote}"</p>
            <footer class="flex items-center gap-3">
              {testimonial.avatar ? (
                <CloudinaryImage
                  src={testimonial.avatar}
                  alt={testimonial.author || ''}
                  width={40}
                  height={40}
                  class="w-10 h-10 rounded-full object-cover"
                />
              ) : (
                <div class="w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center">
                  <span class="text-primary-600 font-medium">
                    {testimonial.author?.charAt(0) || 'C'}
                  </span>
                </div>
              )}
              <div>
                <cite class="font-medium text-gray-900 not-italic text-sm">{testimonial.author}</cite>
                {testimonial.position && <p class="text-xs text-gray-500">{testimonial.position}</p>}
              </div>
            </footer>
          </blockquote>
        ))}
      </div>
    )}
  </div>
</section>

{layout === 'carousel' && items.length > 1 && (
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const track = document.getElementById('testimonials-track');
      const dots = document.querySelectorAll('#testimonials-dots button');
      let currentIndex = 0;
      
      const goToSlide = (index: number) => {
        currentIndex = index;
        if (track) {
          track.style.transform = `translateX(-${index * 100}%)`;
        }
        dots.forEach((dot, i) => {
          dot.classList.toggle('bg-primary-500', i === index);
          dot.classList.toggle('bg-gray-300', i !== index);
        });
      };
      
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => goToSlide(index));
      });
      
      // Auto-play
      setInterval(() => {
        const nextIndex = (currentIndex + 1) % dots.length;
        goToSlide(nextIndex);
      }, 5000);
    });
  </script>
)}

---
import { Icon } from "astro-icon/components";
import Button from '../ui/Button.astro';

export interface Props {
  title: string;
  description: string;
  tags: string[];
}

const { title, description, tags } = Astro.props;

// Colors for tags
const tagColors = [
  "from-primary-green to-emerald-500",
  "from-blue-500 to-cyan-500", 
  "from-purple-500 to-pink-500",
  "from-orange-500 to-red-500"
];
---

<section class="relative py-20 lg:py-32 bg-gradient-to-br from-slate-900 via-gray-900 to-slate-900 overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <img 
      src="/images/portfolio-header-4.png" 
      alt={title}
      class="w-full h-full object-cover opacity-20"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-slate-900/80 via-gray-900/60 to-slate-900/80"></div>
  </div>

  <!-- Background decorations -->
  <div class="absolute inset-0">
    <div class="absolute top-20 right-20 w-40 h-40 bg-primary-green/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 left-20 w-32 h-32 bg-blue-500/10 rounded-full blur-2xl"></div>
    <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-purple-500/10 rounded-full blur-xl"></div>
  </div>

  <div class="max-w-6xl mx-auto px-6 relative z-10">
    <div class="text-center space-y-8">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 bg-primary-green/10 backdrop-blur-sm border border-primary-green/20 rounded-full px-4 py-2" data-aos="fade-up">
        <Icon name="ph:star-fill" class="w-5 h-5 text-primary-green" />
        <span class="text-primary-green font-semibold text-sm">Proyecto Destacado</span>
      </div>

      <!-- Title -->
      <h1 class="text-4xl lg:text-7xl font-bold text-white leading-tight max-w-4xl mx-auto" data-aos="fade-up" data-aos-delay="100">
        {title}
      </h1>
      
      <!-- Description -->
      <p class="text-xl lg:text-2xl text-gray-300 leading-relaxed max-w-3xl mx-auto" data-aos="fade-up" data-aos-delay="200">
        {description}
      </p>

      <!-- Tags -->
      <div class="flex flex-wrap gap-4 justify-center pt-4" data-aos="fade-up" data-aos-delay="300">
        {tags.map((tag, index) => (
          <div class={`bg-gradient-to-r ${tagColors[index] || tagColors[0]} rounded-full px-6 py-3 text-white font-semibold text-sm backdrop-blur-sm border border-white/20 hover:scale-105 transition-transform duration-300`}>
            {tag}
          </div>
        ))}
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center pt-8" data-aos="fade-up" data-aos-delay="400">
        <Button variant="success" href="#gallery" class="group">
          <Icon name="ph:images-fill" class="w-5 h-5 group-hover:scale-110 transition-transform" />
          Ver Galer√≠a
        </Button>
        <Button variant="outline" href="#details">
          <Icon name="ph:info-fill" class="w-5 h-5" />
          Detalles del Proyecto
        </Button>
      </div>
    </div>
  </div>

  <!-- Floating Elements -->
  <div class="absolute bottom-10 right-10 w-20 h-20 bg-gradient-to-br from-primary-green/20 to-emerald-500/20 rounded-2xl flex items-center justify-center backdrop-blur-sm border border-white/10" data-aos="zoom-in" data-aos-delay="500">
    <Icon name="ph:buildings-fill" class="w-10 h-10 text-primary-green" />
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce" data-aos="fade-up" data-aos-delay="600">
    <Icon name="ph:arrow-down" class="w-6 h-6 text-white/60" />
  </div>
</section>
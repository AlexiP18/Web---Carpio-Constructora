---
import { Icon } from "astro-icon/components";
import Button from '../ui/Button.astro';

export interface Props {
  title: string;
  description: string;
  benefits: Array<{
    title: string;
    description: string;
    icon?: string;
  }>;
  imageUrl?: string;
}

const { title, description, benefits, imageUrl = "/images/placeholder-image.jpg" } = Astro.props;

// Default icons for benefits
const defaultIcons = ["ph:shield-check-fill", "ph:user-focus-fill", "ph:trophy-fill"];
const gradientClasses = [
  "from-primary-green to-emerald-500",
  "from-blue-500 to-cyan-500",
  "from-purple-500 to-pink-500"
];
---

<section class="py-20 bg-gradient-to-br from-slate-50 via-white to-gray-50 relative overflow-hidden" id="benefits">
  <!-- Background decorations -->
  <div class="absolute inset-0">
    <div class="absolute top-20 right-20 w-40 h-40 bg-primary-green/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 left-20 w-32 h-32 bg-blue-500/5 rounded-full blur-2xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Content Side -->
      <div class="space-y-8" data-aos="fade-right">
        <!-- Header -->
        <div class="space-y-6">
          <div class="inline-flex items-center gap-2 bg-primary-green/10 backdrop-blur-sm border border-primary-green/20 rounded-full px-4 py-2">
            <Icon name="ph:trophy-fill" class="w-5 h-5 text-primary-green" />
            <span class="text-primary-green font-semibold text-sm">Beneficios Únicos</span>
          </div>
          
          <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 leading-tight">
            {title}
          </h2>
          
          <p class="text-xl text-gray-600 leading-relaxed">
            {description}
          </p>
        </div>
        
        <!-- Benefits List -->
        <div class="space-y-6">
          {benefits.map((benefit, index) => (
            <div class="group bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-primary-green/20" data-aos="fade-up" data-aos-delay={200 + (index * 100)}>
              <div class="flex items-start gap-4">
                <!-- Icon -->
                <div class={`w-16 h-16 bg-gradient-to-br ${gradientClasses[index] || gradientClasses[0]} rounded-2xl flex items-center justify-center group-hover:scale-105 transition-transform duration-300 flex-shrink-0`}>
                  <Icon name={benefit.icon || defaultIcons[index] || "ph:star-fill"} class="w-8 h-8 text-white" />
                </div>
                
                <!-- Content -->
                <div class="space-y-2 flex-1">
                  <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary-green transition-colors">
                    {benefit.title}
                  </h3>
                  <p class="text-gray-600 leading-relaxed">
                    {benefit.description}
                  </p>
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Call to Action -->
        <div class="pt-4" data-aos="fade-up" data-aos-delay="500">
          <Button variant="success" href="/contacto" class="group">
            <Icon name="ph:chat-circle-text-fill" class="w-5 h-5 group-hover:scale-110 transition-transform" />
            Conocer Más Beneficios
          </Button>
        </div>
      </div>

      <!-- Image Side -->
      <div class="relative" data-aos="fade-left" data-aos-delay="300">
        <!-- Main Image -->
        <div class="relative rounded-3xl overflow-hidden shadow-2xl">
          <img 
            src={imageUrl} 
            alt="Beneficios del servicio"
            class="w-full h-[500px] lg:h-[600px] object-cover"
          />
          
          <!-- Overlay gradient -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent"></div>
        </div>

        <!-- Floating Stats Card -->
        <div class="absolute -bottom-6 -left-6 bg-white rounded-2xl p-6 shadow-xl border border-gray-100" data-aos="zoom-in" data-aos-delay="600">
          <div class="grid grid-cols-2 gap-4 text-center">
            <div class="space-y-1">
              <div class="text-2xl font-bold text-primary-green">98%</div>
              <div class="text-gray-600 text-sm">Satisfacción</div>
            </div>
            <div class="space-y-1">
              <div class="text-2xl font-bold text-primary-green">24/7</div>
              <div class="text-gray-600 text-sm">Soporte</div>
            </div>
          </div>
        </div>

        <!-- Floating Icon -->
        <div class="absolute -top-4 -right-4 w-16 h-16 bg-gradient-to-br from-primary-green to-emerald-500 rounded-2xl flex items-center justify-center shadow-lg" data-aos="zoom-in" data-aos-delay="700">
          <Icon name="ph:certificate-fill" class="w-8 h-8 text-white" />
        </div>
      </div>
    </div>
  </div>
</section>

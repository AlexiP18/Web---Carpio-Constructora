---
import { Icon } from "astro-icon/components";

export interface Props {
  title: string;
  description: string;
  benefits: Array<{
    title: string;
    description: string;
    icon?: string;
  }>;
  imageUrl?: string;
}

const { title, description, benefits, imageUrl = "/images/placeholder-image.jpg" } = Astro.props;

// Default icons for benefits
const defaultIcons = ["ph:shield-check", "ph:user-focus"];
---

<section class="bg-white flex flex-col gap-20 items-center justify-start overflow-clip px-16 py-28 relative w-full" data-aos="fade-up">
  <div class="flex flex-col gap-20 items-start justify-start max-w-[1280px] relative w-full">
    <div class="flex gap-20 items-center justify-start relative w-full">
      <div class="basis-0 flex flex-col gap-8 grow items-start justify-start min-h-px min-w-px relative" data-aos="fade-right">
        <div class="flex flex-col gap-6 items-start justify-start leading-[0] relative text-[#0c0801] w-full">
          <div class="font-urbanist font-medium relative text-[48px] tracking-[0.48px] w-full">
            <p class="leading-[1.2]">{title}</p>
          </div>
          <div class="font-heebo font-normal relative text-[20px] w-full">
            <p class="leading-[1.6]">{description}</p>
          </div>
        </div>
        
        <div class="flex flex-col gap-4 items-start justify-start relative w-full">
          <div class="flex gap-6 items-start justify-start relative w-full">
            {benefits.map((benefit, index) => (
              <div class="basis-0 flex flex-col gap-4 grow items-start justify-start min-h-px min-w-px relative" data-aos="fade-up" data-aos-delay={200 + (index * 100)}>
                <div class="relative size-12">
                  <Icon name={benefit.icon || defaultIcons[index] || "ph:star"} class="w-full h-full text-[#0c0801]" />
                </div>
                <div class="font-urbanist font-medium leading-[1.2] text-[#0c0801] text-[26px] tracking-[0.26px]">
                  {benefit.title}
                </div>
                <div class="font-heebo font-normal leading-[1.6] text-[#0c0801] text-[18px]">
                  {benefit.description}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
      <div 
        class="aspect-[600/640] basis-0 bg-center bg-cover bg-no-repeat grow min-h-px min-w-px rounded-[40px]" 
        style={`background-image: url('${imageUrl}')`}
        data-aos="fade-left"
        data-aos-delay="300"
      />
    </div>
  </div>
</section>

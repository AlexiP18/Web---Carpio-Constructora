---
import { Icon } from "astro-icon/components";

export interface Props {
  tagline: string;
  title: string;
  description: string;
  steps: Array<{
    number: string;
    title: string;
    description: string;
    icon?: string;
  }>;
}

const { tagline, title, description, steps } = Astro.props;

// Default icons for process steps
const defaultIcons = ["ph:one", "ph:two", "ph:three"];
---

<section class="bg-[#f8f9fa] flex flex-col gap-20 items-center justify-start overflow-clip px-16 py-28 relative w-full" data-aos="fade-up">
  <div class="flex flex-col gap-20 items-start justify-start max-w-[1280px] relative w-full">
    <div class="flex flex-col gap-8 items-start justify-start relative w-full" data-aos="fade-right">
      <div class="text-[#2d862d] uppercase font-urbanist font-semibold relative text-[14px] tracking-[1.4px] w-full">
        {tagline}
      </div>
      <div class="flex flex-col gap-6 items-start justify-start leading-[0] relative text-[#0c0801] w-full">
        <div class="font-urbanist font-medium relative text-[48px] tracking-[0.48px] w-full">
          <p class="leading-[1.2]">{title}</p>
        </div>
        <div class="font-heebo font-normal relative text-[20px] w-full">
          <p class="leading-[1.6]">{description}</p>
        </div>
      </div>
    </div>
    
    <div class="flex gap-8 items-start justify-start relative w-full">
      {steps.map((step, index) => (
        <div class="basis-0 flex flex-col gap-6 grow items-start justify-start min-h-px min-w-px relative" data-aos="fade-up" data-aos-delay={200 + (index * 150)}>
          <div class="flex flex-col gap-4 items-start justify-start relative w-full">
            <div class="flex gap-4 items-center justify-start relative w-full">
              <div class="aspect-square bg-[#d7e6fd] flex items-center justify-center relative rounded-full size-14">
                <div class="font-urbanist font-semibold text-[#0c0801] text-[20px]">
                  {step.number}
                </div>
              </div>
              {step.icon && (
                <Icon name={step.icon} class="w-8 h-8 text-[#2d862d]" />
              )}
            </div>
            <div class="font-urbanist font-medium leading-[1.2] text-[#0c0801] text-[26px] tracking-[0.26px]">
              {step.title}
            </div>
            <div class="font-heebo font-normal leading-[1.6] text-[#0c0801] text-[18px]">
              {step.description}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

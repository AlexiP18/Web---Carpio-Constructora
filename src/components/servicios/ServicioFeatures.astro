---
import { Icon } from "astro-icon/components";

export interface Props {
  tagline: string;
  title: string;
  description: string;
  features: Array<{
    title: string;
    description: string;
    icon?: string;
  }>;
}

const { tagline, title, description, features } = Astro.props;

// Default icons for features
const defaultIcons = ["ph:leaf", "ph:users", "ph:heart"];
---

<section class="bg-[#dad9d8] flex flex-col gap-12 lg:gap-20 items-center justify-start overflow-clip px-5 lg:px-16 py-16 lg:py-28 relative w-full" data-aos="fade-up">
  <div class="flex flex-col gap-12 lg:gap-20 items-start justify-start max-w-[1280px] relative w-full">
    <div class="flex flex-col gap-3 lg:gap-4 items-start justify-start max-w-[768px] relative w-full" data-aos="fade-up">
      <div class="flex items-center justify-start relative">
        <div class="font-heebo font-semibold leading-[1.5] relative text-[#0c0801] text-sm lg:text-[16px]">
          {tagline}
        </div>
      </div>
      <div class="flex flex-col gap-4 lg:gap-6 items-start justify-start leading-[0] relative text-[#0c0801] w-full">
        <div class="font-urbanist font-medium relative text-[28px] sm:text-[44px] lg:text-[60px] tracking-[0.28px] lg:tracking-[0.6px] w-full">
          <p class="leading-[1.2]">{title}</p>
        </div>
        <div class="font-heebo font-normal relative text-base lg:text-[20px] w-full">
          <p class="leading-[1.6]">{description}</p>
        </div>
      </div>
    </div>
    
    <div class="flex flex-col gap-8 lg:gap-16 items-start justify-start relative w-full">
      <div class="flex flex-col lg:flex-row gap-8 lg:gap-12 items-start justify-start relative w-full">
        {features.map((feature, index) => (
          <div class="w-full lg:basis-0 flex flex-col gap-4 lg:gap-6 lg:grow items-start justify-start min-h-px min-w-px relative" data-aos="fade-up" data-aos-delay={100 + (index * 100)}>
            <div class="relative size-10 lg:size-12">
              <Icon name={feature.icon || defaultIcons[index] || "ph:star"} class="w-full h-full text-[#0c0801]" />
            </div>
            <div class="font-urbanist font-medium leading-[1.2] text-[#0c0801] text-[24px] lg:text-[40px] tracking-[0.24px] lg:tracking-[0.4px]">
              {feature.title}
            </div>
            <div class="font-heebo font-normal leading-[1.6] text-[#0c0801] text-base lg:text-[18px]">
              {feature.description}
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <div class="flex flex-col sm:flex-row gap-4 lg:gap-6 items-center justify-start relative w-full" data-aos="fade-up" data-aos-delay="400">
      <button class="bg-[#f2f2f2] border-2 border-[#0c0801] flex gap-2 items-center justify-center px-5 lg:px-6 py-2 lg:py-2.5 relative rounded-[100px] shadow-[0px_2px_2px_0px_rgba(12,8,1,0.15)] hover:bg-gray-200 transition-colors w-full sm:w-auto">
        <div class="font-heebo font-medium leading-[0] relative text-[#0c0801] text-base lg:text-[18px]">
          Más
        </div>
      </button>
      <a href="/contacto" class="flex gap-2 items-center justify-center overflow-clip relative rounded-[100px] hover:opacity-80 transition-opacity w-full sm:w-auto">
        <div class="font-heebo font-medium leading-[0] relative text-[#0c0801] text-base lg:text-[18px]">
          Contáctanos
        </div>
        <Icon name="ph:arrow-right" class="w-5 lg:w-6 h-5 lg:h-6 text-[#0c0801]" />
      </a>
    </div>
  </div>
</section>

---
import { Icon } from "astro-icon/components";
import Button from '../ui/Button.astro';

export interface Props {
  tagline: string;
  title: string;
  description: string;
  features: Array<{
    title: string;
    description: string;
    icon?: string;
  }>;
}

const { tagline, title, description, features } = Astro.props;

// Default icons for features
const defaultIcons = ["ph:leaf-fill", "ph:users-fill", "ph:heart-fill"];
const colorClasses = [
  "from-primary-green to-emerald-500",
  "from-blue-500 to-blue-600", 
  "from-purple-500 to-purple-600"
];
---

<section class="py-20 bg-gradient-to-br from-white via-gray-50 to-white" id="features">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center max-w-4xl mx-auto mb-16" data-aos="fade-up">
      <div class="inline-flex items-center gap-2 bg-primary-green/10 backdrop-blur-sm border border-primary-green/20 rounded-full px-4 py-2 mb-6">
        <Icon name="ph:sparkle-fill" class="w-5 h-5 text-primary-green" />
        <span class="text-primary-green font-semibold text-sm">{tagline}</span>
      </div>
      
      <h2 class="text-4xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
        {title}
      </h2>
      
      <p class="text-xl text-gray-600 leading-relaxed">
        {description}
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid lg:grid-cols-3 gap-8 mb-16">
      {features.map((feature, index) => (
        <div class="group bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-100 hover:border-primary-green/20 hover:scale-105" data-aos="fade-up" data-aos-delay={100 + (index * 100)}>
          <div class="space-y-6">
            <!-- Icon -->
            <div class={`w-20 h-20 bg-gradient-to-br ${colorClasses[index] || colorClasses[0]} rounded-3xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300`}>
              <Icon name={feature.icon || defaultIcons[index] || "ph:star-fill"} class="w-10 h-10 text-white" />
            </div>
            
            <!-- Content -->
            <div class="space-y-4">
              <h3 class="text-2xl font-bold text-gray-900 group-hover:text-primary-green transition-colors">
                {feature.title}
              </h3>
              <p class="text-gray-600 leading-relaxed">
                {feature.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Additional Features Section -->
    <div class="bg-gradient-to-r from-slate-900 to-slate-800 rounded-3xl p-8 lg:p-12 relative overflow-hidden" data-aos="fade-up" data-aos-delay="400">
      <!-- Background decoration -->
      <div class="absolute inset-0">
        <div class="absolute top-0 right-0 w-32 h-32 bg-primary-green/10 rounded-full blur-2xl"></div>
        <div class="absolute bottom-0 left-0 w-24 h-24 bg-blue-500/10 rounded-full blur-xl"></div>
      </div>

      <div class="relative z-10 grid lg:grid-cols-2 gap-8 items-center">
        <!-- Content -->
        <div class="space-y-6">
          <h3 class="text-2xl lg:text-3xl font-bold text-white">
            ¿Por qué elegir nuestro servicio?
          </h3>
          <p class="text-gray-300 leading-relaxed">
            Combinamos experiencia, tecnología y pasión para entregar resultados excepcionales 
            que superan las expectativas de nuestros clientes.
          </p>
          
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-4 text-center">
              <div class="text-2xl font-bold text-primary-green mb-1">15+</div>
              <div class="text-gray-300 text-sm">Años de Experiencia</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-4 text-center">
              <div class="text-2xl font-bold text-primary-green mb-1">150+</div>
              <div class="text-gray-300 text-sm">Proyectos Completados</div>
            </div>
          </div>
        </div>

        <!-- Call to Action -->
        <div class="text-center lg:text-right space-y-6">
          <div class="space-y-4">
            <h4 class="text-xl font-bold text-white">¿Listo para comenzar?</h4>
            <p class="text-gray-300">Solicita tu cotización personalizada</p>
          </div>
          
          <div class="flex flex-col sm:flex-row lg:flex-col gap-4 lg:items-end">
            <Button variant="success" href="/contacto">
              <Icon name="ph:phone" class="w-5 h-5" />
              Solicitar Cotización
            </Button>
            <Button variant="outline" href="#benefits">
              <Icon name="ph:arrow-down" class="w-5 h-5" />
              Ver Beneficios
            </Button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

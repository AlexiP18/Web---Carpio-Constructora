---
// HeroContact.astro - Hero section for contact page with background image
import SectionHeader from '../ui/SectionHeader.astro';
import Button from '../ui/Button.astro';
---

<section class="bg-[position:0%_0%,_50%_50%] bg-[rgba(0,0,0,0.5)] bg-size-[auto,cover] box-border content-stretch flex flex-col gap-12 lg:gap-20 items-center justify-start overflow-clip px-5 lg:px-16 py-16 lg:py-28 relative w-full" style="background-image: url('/images/header-50.png');">
  <div class="content-stretch flex flex-col gap-12 lg:gap-20 items-start justify-start max-w-[1280px] relative w-full">
    <div class="content-stretch flex flex-col gap-6 lg:gap-8 items-start justify-start max-w-[768px] relative w-full">
      <SectionHeader 
        tagline="Contacto"
        title="Contáctanos Hoy"
        description="Estamos aquí para ayudarte con consultas, cotizaciones y toda la información que necesites."
        textColor="light"
        titleSize="hero"
      />
      <div class="content-stretch flex gap-4 items-start justify-start relative">
        <Button href="#form" variant="primary">Empezar</Button>
        <Button href="#info" variant="secondary">Más información</Button>
      </div>
    </div>
  </div>
</section>
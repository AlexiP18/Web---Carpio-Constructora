---
import Button from '../ui/Button.astro';

export interface Props {
  title: string;
  description: string;
  tags: string[];
}

const { title, description, tags } = Astro.props;

// Colors for tags - Colores más claros y vibrantes
const tagColors = [
  "bg-blue-600 hover:bg-blue-700",
  "bg-green-600 hover:bg-green-700", 
  "bg-purple-600 hover:bg-purple-700",
  "bg-orange-600 hover:bg-orange-700"
];
---

<section class="bg-gray-600 py-32 lg:py-40">
  <div class="max-w-4xl mx-auto px-6 text-center">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm border border-white/30 rounded-full px-4 py-2 mb-8">
      <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
      <span class="text-white font-semibold text-sm">Proyecto Destacado</span>
    </div>

    <!-- Title -->
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold text-white leading-tight mb-8">
      {title}
    </h1>
    
    <!-- Description -->
    <p class="text-xl lg:text-2xl text-white/90 leading-relaxed mb-12 max-w-3xl mx-auto">
      {description}
    </p>

    <!-- Tags - Más claros y visibles -->
    <div class="flex flex-wrap gap-4 justify-center mb-12">
      {tags.map((tag, index) => (
        <div class={`${tagColors[index] || tagColors[0]} rounded-full px-6 py-3 text-white font-semibold text-sm transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105`}>
          {tag}
        </div>
      ))}
    </div>
  </div>
</section>
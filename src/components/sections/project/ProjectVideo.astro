---
interface Props {
  videoUrl: string;
  title?: string;
  description?: string;
}

const { 
  videoUrl, 
  title = "Tour Virtual del Proyecto",
  description = "Explora cada detalle de este proyecto a través de nuestro tour virtual"
} = Astro.props;
---

<section class="relative w-full py-16 md:py-24 bg-gradient-to-b from-gray-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
      {description && (
        <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
          {description}
        </p>
      )}
    </div>

    <!-- Video Container -->
    <div class="relative max-w-6xl mx-auto">
      <!-- Decorative background -->
      <div class="absolute -inset-4 bg-gradient-to-r from-blue-500/10 to-green-500/10 rounded-3xl blur-2xl"></div>
      
      <!-- Video wrapper with shadow and border -->
      <div class="relative bg-white rounded-2xl shadow-2xl overflow-hidden border border-gray-200">
        <!-- Aspect ratio container -->
        <div class="relative w-full" style="padding-bottom: 56.25%;"> <!-- 16:9 aspect ratio -->
          <video 
            class="absolute top-0 left-0 w-full h-full object-cover"
            controls
            preload="metadata"
            poster={videoUrl.replace('.mov', '-poster.jpg')}
          >
            <source src={videoUrl} type="video/quicktime">
            <source src={videoUrl.replace('.mov', '.mp4')} type="video/mp4">
            
            <!-- Fallback para navegadores que no soportan el formato -->
            <p class="absolute inset-0 flex items-center justify-center bg-gray-100 text-gray-600">
              Tu navegador no soporta la reproducción de video. 
              <a href={videoUrl} download class="text-blue-600 underline ml-2">
                Descargar video
              </a>
            </p>
          </video>
        </div>

        <!-- Video controls overlay (opcional) -->
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/50 to-transparent p-4 opacity-0 hover:opacity-100 transition-opacity duration-300">
          <div class="flex items-center justify-between text-white text-sm">
            <span>Tour Virtual</span>
            <span>HD</span>
          </div>
        </div>
      </div>

      <!-- Info badges debajo del video -->
      <div class="flex flex-wrap gap-4 justify-center mt-8">
        <div class="flex items-center gap-2 px-4 py-2 bg-white rounded-full shadow-md border border-gray-200">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          <span class="text-sm font-medium text-gray-700">Video en HD</span>
        </div>
        
        <div class="flex items-center gap-2 px-4 py-2 bg-white rounded-full shadow-md border border-gray-200">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm font-medium text-gray-700">Tour Completo</span>
        </div>
        
        <div class="flex items-center gap-2 px-4 py-2 bg-white rounded-full shadow-md border border-gray-200">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm font-medium text-gray-700">Reproducción Inmediata</span>
        </div>
      </div>
    </div>

    <!-- Call to action -->
    <div class="text-center mt-12">
      <p class="text-gray-600 mb-6">
        ¿Te interesa este proyecto? Contáctanos para más información
      </p>
      <a 
        href="/contacto" 
        class="inline-flex items-center gap-2 px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        Solicitar Información
      </a>
    </div>
  </div>
</section>

<style>
  /* Mejoras para el video */
  video::-webkit-media-controls-panel {
    background-image: linear-gradient(transparent, rgba(0,0,0,0.3));
  }
  
  /* Asegurar que el video sea responsive */
  video {
    max-width: 100%;
    height: auto;
  }
</style>

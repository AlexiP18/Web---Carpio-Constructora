---
interface Props {
  videoUrl: string;
  title?: string;
  description?: string;
  poster?: string;
}

const { 
  videoUrl, 
  title = "Tour Virtual del Proyecto",
  description = "Explora cada detalle de este proyecto a través de nuestro tour virtual",
  poster
} = Astro.props;

// Detectar si es URL de Cloudinary o local
const isCloudinaryUrl = videoUrl.includes('cloudinary.com') || videoUrl.includes('res.cloudinary');

// Generar URLs optimizadas para Cloudinary
let videoMp4 = videoUrl;
let videoWebm = videoUrl;
let videoPoster = poster || '';

if (isCloudinaryUrl && videoUrl.includes('/upload/')) {
  // Transformaciones de Cloudinary para optimización
  videoMp4 = videoUrl.replace('/upload/', '/upload/f_mp4,vc_h264/');
  videoWebm = videoUrl.replace('/upload/', '/upload/f_webm,vc_vp9/');
  // Poster del primer frame
  if (!poster) {
    videoPoster = videoUrl.replace('/upload/', '/upload/so_0,f_jpg,w_1280/').replace(/\.(mov|mp4|webm|avi)$/i, '.jpg');
  }
}
---

<section class="relative w-full py-16 md:py-24 bg-gradient-to-b from-gray-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
      {description && (
        <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
          {description}
        </p>
      )}
    </div>

    <!-- Video Container -->
    <div class="relative max-w-6xl mx-auto">
      <!-- Decorative background -->
      <div class="absolute -inset-4 bg-gradient-to-r from-blue-500/10 to-green-500/10 rounded-3xl blur-2xl"></div>
      
      <!-- Video wrapper with shadow and border -->
      <div class="relative bg-white rounded-2xl shadow-2xl overflow-hidden border border-gray-200 group">
        <!-- Aspect ratio container -->
        <div class="relative w-full video-container" style="padding-bottom: 56.25%;"> <!-- 16:9 aspect ratio -->
          {isCloudinaryUrl ? (
            <video 
              id="project-video"
              class="absolute top-0 left-0 w-full h-full object-cover"
              controls
              autoplay
              muted
              playsinline
              preload="metadata"
              poster={videoPoster}
            >
              <source src={videoWebm} type="video/webm">
              <source src={videoMp4} type="video/mp4">
              <p>
                Tu navegador no soporta la reproducción de video. 
                <a href={videoMp4} download style="color: #2563eb; text-decoration: underline;">
                  Descarga el video aquí
                </a>
              </p>
            </video>
          ) : (
            <video 
              id="project-video"
              class="absolute top-0 left-0 w-full h-full object-cover"
              controls
              preload="metadata"
              muted
            >
              <source src={videoUrl} type="video/mp4">
              <source src={videoUrl} type="video/quicktime">
              <source src={videoUrl.replace('.mov', '.webm')} type="video/webm">
              
              <!-- Fallback simple de texto para navegadores antiguos -->
              <p>
                Tu navegador no soporta la reproducción de video. 
                <a href={videoUrl} download style="color: #2563eb; text-decoration: underline;">
                  Descarga el video aquí
                </a>
              </p>
            </video>
          )}

          <!-- Botón Play/Pause grande en el centro -->
          <button 
            id="play-pause-btn"
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-20 h-20 bg-blue-600/90 hover:bg-blue-700 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 z-10 shadow-2xl hover:scale-110"
            aria-label="Reproducir/Pausar video"
          >
            <!-- Icono Play -->
            <svg 
              id="play-icon" 
              class="w-10 h-10 text-white ml-1" 
              fill="currentColor" 
              viewBox="0 0 24 24"
            >
              <path d="M8 5v14l11-7z"/>
            </svg>
            <!-- Icono Pause (oculto por defecto) -->
            <svg 
              id="pause-icon" 
              class="w-10 h-10 text-white hidden" 
              fill="currentColor" 
              viewBox="0 0 24 24"
            >
              <path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Call to action -->
    <div class="text-center mt-12">
      <p class="text-gray-600 mb-6">
        ¿Te interesa este proyecto? Contáctanos para más información
      </p>
      <a 
        href="/contacto" 
        class="inline-flex items-center gap-2 px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        Solicitar Información
      </a>
    </div>
  </div>
</section>

<style>
  /* Mejoras para el video */
  video::-webkit-media-controls-panel {
    background-image: linear-gradient(transparent, rgba(0,0,0,0.3));
  }
  
  /* Asegurar que el video sea responsive */
  video {
    max-width: 100%;
    height: auto;
  }

  /* Ocultar el botón cuando el video no está en hover y está reproduciendo */
  .video-container:not(:hover) #play-pause-btn.playing {
    opacity: 0;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const video = document.getElementById('project-video') as HTMLVideoElement;
    const playPauseBtn = document.getElementById('play-pause-btn');
    const playIcon = document.getElementById('play-icon');
    const pauseIcon = document.getElementById('pause-icon');

    if (!video || !playPauseBtn || !playIcon || !pauseIcon) return;

    // Función para actualizar el icono del botón
    const updateButtonIcon = () => {
      if (video.paused) {
        playIcon.classList.remove('hidden');
        pauseIcon.classList.add('hidden');
        playPauseBtn.classList.remove('playing');
      } else {
        playIcon.classList.add('hidden');
        pauseIcon.classList.remove('hidden');
        playPauseBtn.classList.add('playing');
      }
    };

    // Función para toggle play/pause
    const togglePlayPause = () => {
      if (video.paused) {
        video.play();
      } else {
        video.pause();
      }
      updateButtonIcon();
    };

    // Event listener para el botón
    playPauseBtn.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      togglePlayPause();
    });

    // También permitir play/pause al hacer click en el video
    video.addEventListener('click', (e) => {
      e.preventDefault();
      togglePlayPause();
    });

    // Actualizar icono cuando el video se pausa/reproduce por otros medios
    video.addEventListener('play', updateButtonIcon);
    video.addEventListener('pause', updateButtonIcon);

    // Intersection Observer para autoplay cuando el video entra en viewport
    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.5 // El video debe ser 50% visible
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // El video entró en el viewport, reproducir
          video.play().catch(err => {
            console.log('Autoplay was prevented:', err);
            // Si el autoplay falla (política del navegador), mostrar el botón
            playPauseBtn.style.opacity = '1';
          });
        } else {
          // El video salió del viewport, pausar
          video.pause();
        }
        updateButtonIcon();
      });
    }, observerOptions);

    // Observar el contenedor del video
    const videoContainer = document.querySelector('.video-container');
    if (videoContainer) {
      observer.observe(videoContainer);
    }

    // Inicializar el icono correcto
    updateButtonIcon();
  });
</script>

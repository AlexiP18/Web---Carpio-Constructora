---
import Button from '../ui/Button.astro';
import { Icon } from 'astro-icon/components';

export interface Props {
  tagline: string;
  title: string;
  description: string;
  teamMembers: Array<{
    name: string;
    position: string;
    bio: string;
    avatar: string;
    social: {
      linkedin?: string;
      twitter?: string;
      dribbble?: string;
    };
  }>;
  hiringTitle: string;
  hiringDescription: string;
  hiringButtonText: string;
}

const { 
  tagline, 
  title, 
  description, 
  teamMembers, 
  hiringTitle, 
  hiringDescription, 
  hiringButtonText 
} = Astro.props;
---

<section class="bg-[#dad9d8] box-border content-stretch flex flex-col gap-12 md:gap-20 items-center justify-start overflow-clip px-5 md:px-16 py-20 md:py-28 relative shrink-0 w-full">
  <div class="content-stretch flex flex-col gap-12 md:gap-20 items-center justify-start max-w-[1280px] relative shrink-0 w-full">
    <div class="content-stretch flex flex-col gap-4 items-center justify-start max-w-[768px] relative shrink-0 w-full" data-aos="fade-up">
      <div class="content-stretch flex items-center justify-start relative shrink-0 w-full">
        <div class="font-['Heebo:SemiBold',_sans-serif] font-semibold leading-[0] relative shrink-0 text-[#0c0801] text-[16px] text-center text-nowrap">
          <p class="leading-[1.5] whitespace-pre">{tagline}</p>
        </div>
      </div>
      <div class="content-stretch flex flex-col gap-6 items-center justify-start leading-[0] relative shrink-0 text-[#0c0801] text-center w-full">
        <div class="font-['Urbanist:Medium',_sans-serif] font-medium relative shrink-0 text-[44px] md:text-[60px] tracking-[0.44px] md:tracking-[0.6px] w-full">
          <p class="leading-[1.2]">{title}</p>
        </div>
        <div class="font-['Heebo:Regular',_sans-serif] font-normal relative shrink-0 text-[14px] md:text-[20px] w-full">
          <p class="leading-[1.6]">{description}</p>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-12 w-full">
      {teamMembers.map((member, index) => (
        <div class="team-card content-stretch flex flex-col gap-6 items-center justify-start w-full bg-white rounded-lg p-6 hover:bg-gray-50" data-aos="fade-up" data-aos-delay={100 + (index * 100)}>
          <div class="relative shrink-0 size-20">
            <img alt={member.name} class="block max-w-none size-full rounded-full object-cover" height="80" src={member.avatar} width="80" />
          </div>
          <div class="content-stretch flex flex-col gap-4 items-center justify-start leading-[0] text-[#0c0801] text-center w-full">
            <div class="content-stretch flex flex-col items-center justify-start w-full">
              <div class="font-['Heebo:SemiBold',_sans-serif] font-semibold relative shrink-0 text-[18px] md:text-[26px] w-full">
                <p class="leading-[1.6]">{member.name}</p>
              </div>
              <div class="font-['Heebo:Regular',_sans-serif] font-normal relative shrink-0 text-[16px] md:text-[20px] w-full">
                <p class="leading-[1.6]">{member.position}</p>
              </div>
            </div>
            <div class="font-['Heebo:Regular',_sans-serif] font-normal relative shrink-0 text-[14px] md:text-[18px] w-full">
              <p class="leading-[1.6]">{member.bio}</p>
            </div>
          </div>
          <div class="content-stretch flex gap-3.5 items-center justify-start">
            {member.social.linkedin && (
              <a href={member.social.linkedin} class="icon-hover overflow-clip relative shrink-0 size-6 text-[#0c0801] hover:text-[#0077b5] transition-colors duration-300" aria-label="LinkedIn">
                <Icon name="ph:linkedin-logo" class="w-6 h-6" />
              </a>
            )}
            {member.social.twitter && (
              <a href={member.social.twitter} class="icon-hover overflow-clip relative shrink-0 size-6 text-[#0c0801] hover:text-[#1da1f2] transition-colors duration-300" aria-label="X">
                <Icon name="ph:x-logo" class="w-6 h-6" />
              </a>
            )}
            {member.social.dribbble && (
              <a href={member.social.dribbble} class="icon-hover overflow-clip relative shrink-0 size-6 text-[#0c0801] hover:text-[#ea4c89] transition-colors duration-300" aria-label="Dribbble">
                <Icon name="ph:dribbble-logo" class="w-6 h-6" />
              </a>
            )}
          </div>
        </div>
      ))}
    </div>

    <div class="content-stretch flex flex-col gap-4 items-center justify-start max-w-[768px] w-full" data-aos="fade-up" data-aos-delay="700">
      <div class="font-['Urbanist:Medium',_sans-serif] font-medium relative shrink-0 text-[40px] tracking-[0.4px] w-full text-center">
        <p class="leading-[1.2]">{hiringTitle}</p>
      </div>
      <div class="font-['Heebo:Regular',_sans-serif] font-normal relative shrink-0 text-[14px] md:text-[20px] w-full text-center">
        <p class="leading-[1.6]">{hiringDescription}</p>
      </div>
      <div class="content-stretch flex items-center justify-center">
        <Button variant="secondary">{hiringButtonText}</Button>
      </div>
    </div>
  </div>
</section>

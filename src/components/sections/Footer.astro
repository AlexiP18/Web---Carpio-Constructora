<footer class="bg-white py-16 md:py-20 px-5 md:px-16">
  <div class="container mx-auto">
    <div class="flex flex-col md:flex-row justify-between items-center gap-8 md:gap-0 mb-16 md:mb-20">
      <img
        src="/images/logo-wide-1.svg"
        alt="Constructora Carpio"
        class="h-7 md:h-9"
      />
      <div class="flex flex-col md:flex-row gap-4 md:gap-8 font-semibold text-center md:text-left text-sm md:text-base">
        <a href="#">Enlace Uno</a>
        <a href="#">Enlace Dos</a>
        <a href="#">Enlace Tres</a>
        <a href="#">Enlace Cuatro</a>
        <a href="#">Enlace Cinco</a>
      </div>
      <div class="flex gap-3">
        <SocialLink href="#" icon="/images/facebook.svg" />
        <SocialLink href="#" icon="/images/instagram.svg" />
        <SocialLink href="#" icon="/images/x.svg" />
        <SocialLink href="#" icon="/images/linkedin.svg" />
        <SocialLink href="#" icon="/images/youtube.svg" />
      </div>
    </div>
    <hr class="border-black mb-6 md:mb-8" />
    <div class="flex flex-col md:flex-row gap-4 md:gap-6 text-xs md:text-sm text-center md:text-left">

---
import { Icon } from "astro-icon/components";
import ProjectCard from "../../ui/ProjectCard.astro";
import BackgroundWavesConjunto from "../../ui/BackgroundWavesConjunto.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
    projects: CollectionEntry<"proyectos">[];
    categories: string[];
}

const { projects, categories } = Astro.props;
---

<section class="py-20 relative overflow-hidden">
    <!-- Background Component -->
    <div class="absolute inset-0 w-full h-full -z-10 pointer-events-none">
        <BackgroundWavesConjunto />
    </div>

    <div class="max-w-7xl mx-auto px-6 relative z-10">
        <!-- Filter Chips -->
        <div class="mb-12" data-aos="fade-up">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900">
                    Filtrar por Categoría
                </h2>
                <div class="text-sm text-gray-500">
                    <span id="project-count">{projects.length}</span> proyectos
                </div>
            </div>

            <div class="flex flex-wrap gap-3">
                {
                    categories.map((category, index) => {
                        // Asignar iconos según la categoría
                        let iconName = "ph:squares-four-fill";
                        if (category === "Todos")
                            iconName = "ph:squares-four-fill";
                        else if (category === "Conjunto Habitacional")
                            iconName = "ph:buildings-fill";
                        else if (category === "Diseño Residencial")
                            iconName = "ph:house-fill";
                        else if (category === "Diseño Retail")
                            iconName = "ph:storefront-fill";

                        return (
                            <button
                                data-category={category}
                                class={`filter-chip px-6 py-3 rounded-full font-semibold text-sm transition-all duration-300 ${
                                    index === 0
                                        ? "bg-[#D79528] text-white shadow-lg scale-105"
                                        : "bg-white text-gray-700 border border-gray-200 hover:border-[#D79528] hover:shadow-md"
                                }`}
                            >
                                <span class="flex items-center gap-2">
                                    <Icon name={iconName} class="w-4 h-4" />
                                    {category}
                                </span>
                            </button>
                        );
                    })
                }
            </div>
        </div>

        <!-- Projects Grid -->
        <div id="projects-grid" class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            {
                projects.map((proyecto) => (
                    <div
                        class="project-card"
                        data-tags={JSON.stringify(proyecto.data.tags)}
                    >
                        <ProjectCard
                            title={proyecto.data.title}
                            description={proyecto.data.description}
                            tags={proyecto.data.tags}
                            imageUrl={proyecto.data.backgroundImage}
                            projectSlug={proyecto.slug}
                        />
                    </div>
                ))
            }
        </div>

        <!-- No Results Message -->
        <div id="no-results" class="hidden text-center py-20">
            <div
                class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6"
            >
                <Icon
                    name="ph:magnifying-glass"
                    class="w-10 h-10 text-gray-400"
                />
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-2">
                No se encontraron proyectos
            </h3>
            <p class="text-gray-600">Intenta con otra categoría</p>
        </div>
    </div>
</section>

<script>
    // Filter functionality
    function initProjectFilter() {
        const filterChips = document.querySelectorAll(".filter-chip");
        const projectCards = document.querySelectorAll(".project-card");
        const projectCount = document.getElementById("project-count");
        const noResults = document.getElementById("no-results");

        if (!filterChips.length || !projectCards.length) return;

        filterChips.forEach((chip) => {
            chip.addEventListener("click", () => {
                const selectedCategory = chip.getAttribute("data-category");
                if (!selectedCategory) return;

                // Update active chip styles
                filterChips.forEach((c) => {
                    c.classList.remove(
                        "bg-[#D79528]",
                        "text-white",
                        "shadow-lg",
                        "scale-105",
                    );
                    c.classList.add(
                        "bg-white",
                        "text-gray-700",
                        "border",
                        "border-gray-200",
                    );
                });

                chip.classList.remove(
                    "bg-white",
                    "text-gray-700",
                    "border",
                    "border-gray-200",
                );
                chip.classList.add(
                    "bg-[#D79528]",
                    "text-white",
                    "shadow-lg",
                    "scale-105",
                );

                // Filter projects
                let visibleCount = 0;
                projectCards.forEach((card) => {
                    const cardEl = card as HTMLDivElement;
                    const tagsAttr = cardEl.getAttribute("data-tags");

                    try {
                        const tags = JSON.parse(tagsAttr || "[]");
                        const normalizedTags = tags.map((t: string) =>
                            t.toLowerCase().trim(),
                        );
                        const normalizedCategory = selectedCategory
                            .toLowerCase()
                            .trim();

                        if (
                            selectedCategory === "Todos" ||
                            normalizedTags.includes(normalizedCategory)
                        ) {
                            cardEl.style.display = "block";
                            visibleCount++;
                        } else {
                            cardEl.style.display = "none";
                        }
                    } catch (e) {
                        console.error("Error parsing tags", e);
                    }
                });

                // Update count and show/hide no results
                if (projectCount) {
                    projectCount.textContent = visibleCount.toString();
                }

                if (noResults) {
                    noResults.classList.toggle("hidden", visibleCount > 0);
                }

                // Refresh AOS to handle layout changes
                if (typeof window !== "undefined" && (window as any).AOS) {
                    setTimeout(() => {
                        (window as any).AOS.refresh();
                    }, 100);
                }
            });
        });
    }

    // Run on load
    document.addEventListener("DOMContentLoaded", initProjectFilter);
    // Support Astro ViewTransitions if added later
    document.addEventListener("astro:page-load", initProjectFilter);
</script>

<style>
    .filter-chip {
        cursor: pointer;
    }

    .filter-chip:active {
        transform: scale(0.98);
    }
</style>

---
import { Icon } from "astro-icon/components";
import Button from '../../ui/Button.astro';
---

<!-- Services Grid -->
<div class="w-full">
  <div class="grid lg:grid-cols-3 gap-8 lg:gap-10">
    <!-- Service 1: Construction -->
    <div class="group service-card bg-white/10 backdrop-blur-md border border-white/20 rounded-3xl overflow-hidden hover:bg-white/15 hover:shadow-2xl transition-all duration-300" data-aos="fade-up" data-aos-delay="100">
      <div class="flex flex-col h-full">
        <!-- Header -->
        <div class="p-6 border-b border-white/10">
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-gradient-to-br from-brand-primary to-brand-primary-dark rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
              <Icon name="ph:buildings-fill" class="w-7 h-7 text-white" />
            </div>
            <h3 class="text-xl lg:text-2xl font-bold text-white">
              Construcción
            </h3>
          </div>
        </div>

        <!-- Body -->
        <div class="p-6 flex-grow">
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <Icon name="ph:check-circle-fill" class="w-5 h-5 text-brand-primary flex-shrink-0" />
              <span class="text-sm lg:text-base text-white/80">Proyectos residenciales y comerciales</span>
            </div>
            <div class="flex items-center gap-3">
              <Icon name="ph:check-circle-fill" class="w-5 h-5 text-brand-primary flex-shrink-0" />
              <span class="text-sm lg:text-base text-white/80">Materiales de primera calidad</span>
            </div>
            <div class="flex items-center gap-3">
              <Icon name="ph:check-circle-fill" class="w-5 h-5 text-brand-primary flex-shrink-0" />
              <span class="text-sm lg:text-base text-white/80">Garantía extendida</span>
            </div>
          </div>
        </div>
        
        <!-- Footer -->
        <div class="p-6 pt-0">
          <Button 
            variant="outline" 
            href="/servicios/construccion" 
            class="w-full group-hover:bg-brand-primary group-hover:text-white group-hover:border-brand-primary" 
            iconPosition="left" 
            icon="ph:arrow-right"
          >
            Explorar Servicio
          </Button>
        </div>
      </div>
    </div>

    <!-- Service 2: Remodeling -->
    <div class="group service-card bg-white/10 backdrop-blur-md border border-white/20 rounded-3xl overflow-hidden hover:bg-white/15 hover:shadow-2xl transition-all duration-300" data-aos="fade-up" data-aos-delay="200">
      <div class="flex flex-col h-full">
        <!-- Header -->
        <div class="p-6 border-b border-white/10">
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-gradient-to-br from-brand-secondary to-brand-secondary-dark rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
              <Icon name="ph:hammer-fill" class="w-7 h-7 text-white" />
            </div>
            <h3 class="text-xl lg:text-2xl font-bold text-white">
              Remodelación
            </h3>
          </div>
        </div>

        <!-- Body -->
        <div class="p-6 flex-grow">
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <Icon name="ph:check-circle-fill" class="w-5 h-5 text-brand-secondary flex-shrink-0" />
              <span class="text-sm lg:text-base text-white/80">Modernización completa de espacios</span>
            </div>
            <div class="flex items-center gap-3">
              <Icon name="ph:check-circle-fill" class="w-5 h-5 text-brand-secondary flex-shrink-0" />
              <span class="text-sm lg:text-base text-white/80">Diseño interior y exterior</span>
            </div>
            <div class="flex items-center gap-3">
              <Icon name="ph:check-circle-fill" class="w-5 h-5 text-brand-secondary flex-shrink-0" />
              <span class="text-sm lg:text-base text-white/80">Trabajo sin interrupciones</span>
            </div>
          </div>
        </div>
        
        <!-- Footer -->
        <div class="p-6 pt-0">
          <Button 
            variant="outline" 
            href="/servicios/remodelacion" 
            class="w-full group-hover:bg-brand-secondary group-hover:text-white group-hover:border-brand-secondary" 
            iconPosition="left" 
            icon="ph:arrow-right"
          >
            Explorar Servicio
          </Button>
        </div>
      </div>
    </div>

    <!-- Service 3: Architectural Design -->
    <div class="group service-card bg-white/10 backdrop-blur-md border border-white/20 rounded-3xl overflow-hidden hover:bg-white/15 hover:shadow-2xl transition-all duration-300" data-aos="fade-up" data-aos-delay="300">
      <div class="flex flex-col h-full">
        <!-- Header -->
        <div class="p-6 border-b border-white/10">
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-gradient-to-br from-brand-primary to-brand-secondary rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
              <Icon name="ph:pencil-ruler-fill" class="w-7 h-7 text-white" />
            </div>
            <h3 class="text-xl lg:text-2xl font-bold text-white">
              Diseño Arquitectónico
            </h3>
          </div>
        </div>

        <!-- Body -->
        <div class="p-6 flex-grow">
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <Icon name="ph:check-circle-fill" class="w-5 h-5 text-brand-primary flex-shrink-0" />
              <span class="text-sm lg:text-base text-white/80">Proyectos personalizados</span>
            </div>
            <div class="flex items-center gap-3">
              <Icon name="ph:check-circle-fill" class="w-5 h-5 text-brand-primary flex-shrink-0" />
              <span class="text-sm lg:text-base text-white/80">Planos y renderizados 3D</span>
            </div>
            <div class="flex items-center gap-3">
              <Icon name="ph:check-circle-fill" class="w-5 h-5 text-brand-primary flex-shrink-0" />
              <span class="text-sm lg:text-base text-white/80">Asesoría técnica profesional</span>
            </div>
          </div>
        </div>
        
        <!-- Footer -->
        <div class="p-6 pt-0">
          <Button 
            variant="outline" 
            href="/servicios/diseno-arquitectonico" 
            class="w-full group-hover:bg-brand-primary group-hover:text-white group-hover:border-brand-primary" 
            iconPosition="left" 
            icon="ph:arrow-right"
          >
            Explorar Servicio
          </Button>
        </div>
      </div>
    </div>
  </div>
</div>
            

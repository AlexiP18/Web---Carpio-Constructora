---
import { Icon } from "astro-icon/components";
import ProjectCard from '../ui/ProjectCard.astro';
import Button from '../ui/Button.astro';

// Data de proyectos (normalmente vendría de content collections o API)
const projects = [
  {
    title: "Residencial Moderna Vista",
    description: "Este proyecto representa un hito en diseño arquitectónico. Combinamos funcionalidad y estética para crear espacios únicos que reflejan la vida moderna.",
    tags: ["Residencial Urbano", "Sostenibilidad", "Innovación"],
    imageUrl: "/images/placeholder-image.jpg",
    projectSlug: "proyecto-residencial-moderno"
  },
  {
    title: "Centro Comercial Plaza",
    description: "Este centro comercial está diseñado para la comunidad. Fomenta el comercio local y ofrece espacios accesibles para todas las personas.",
    tags: ["Comercio Local", "Espacios Abiertos", "Accesibilidad"],
    imageUrl: "/images/placeholder-image.jpg",
    projectSlug: "centro-comercial-innovador"
  },
  {
    title: "Parque Recreativo Familiar",
    description: "Este parque recreativo es un espacio para disfrutar en familia. Ofrece áreas verdes y actividades para todas las edades en un ambiente natural.",
    tags: ["Naturaleza", "Familia", "Diversión"],
    imageUrl: "/images/placeholder-image.jpg",
    projectSlug: "parque-recreativo-familiar"
  }
];
---

<section class="py-20 bg-gradient-to-br from-white via-gray-50 to-white relative overflow-hidden" id="portfolio">
  <!-- Background decorations -->
  <div class="absolute inset-0">
    <div class="absolute top-20 left-20 w-40 h-40 bg-primary-green/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-20 w-32 h-32 bg-blue-500/5 rounded-full blur-2xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <!-- Section Header -->
    <div class="text-center max-w-4xl mx-auto mb-16" data-aos="fade-up">
      <div class="inline-flex items-center gap-2 bg-primary-green/10 backdrop-blur-sm border border-primary-green/20 rounded-full px-4 py-2 mb-6">
        <Icon name="ph:stack-fill" class="w-5 h-5 text-primary-green" />
        <span class="text-primary-green font-semibold text-sm">Portafolio</span>
      </div>
      
      <h2 class="text-4xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
        Nuestros Proyectos <span class="bg-gradient-to-r from-primary-green to-emerald-400 bg-clip-text text-transparent">Destacados</span>
      </h2>
      
      <p class="text-xl text-gray-600 leading-relaxed">
        Explora nuestra amplia gama de proyectos realizados con excelencia, 
        innovación y el compromiso de transformar espacios en experiencias excepcionales.
      </p>
    </div>

    <!-- Filter Tabs (Future Enhancement) -->
    <div class="flex flex-wrap justify-center gap-4 mb-12" data-aos="fade-up" data-aos-delay="100">
      <button class="bg-primary-green text-white px-6 py-3 rounded-full font-semibold hover:bg-primary-green/90 transition-colors">
        Todos los Proyectos
      </button>
      <button class="bg-white border border-gray-200 text-gray-600 px-6 py-3 rounded-full font-semibold hover:border-primary-green hover:text-primary-green transition-colors">
        Residencial
      </button>
      <button class="bg-white border border-gray-200 text-gray-600 px-6 py-3 rounded-full font-semibold hover:border-primary-green hover:text-primary-green transition-colors">
        Comercial
      </button>
      <button class="bg-white border border-gray-200 text-gray-600 px-6 py-3 rounded-full font-semibold hover:border-primary-green hover:text-primary-green transition-colors">
        Recreativo
      </button>
    </div>

    <!-- Projects Grid -->
    <div class="grid lg:grid-cols-2 xl:grid-cols-1 gap-12 mb-16">
      {projects.map((project, index) => (
        <ProjectCard 
          {...project}
          delay={200 + (index * 150)}
        />
      ))}
    </div>

    <!-- Call to Action -->
    <div class="bg-gradient-to-r from-slate-900 to-slate-800 rounded-3xl p-8 lg:p-12 relative overflow-hidden" data-aos="fade-up" data-aos-delay="500">
      <!-- Background decoration -->
      <div class="absolute inset-0">
        <div class="absolute top-0 right-0 w-32 h-32 bg-primary-green/10 rounded-full blur-2xl"></div>
        <div class="absolute bottom-0 left-0 w-24 h-24 bg-blue-500/10 rounded-full blur-xl"></div>
      </div>

      <div class="relative z-10 grid lg:grid-cols-2 gap-8 items-center">
        <!-- Content -->
        <div class="space-y-6">
          <h3 class="text-2xl lg:text-3xl font-bold text-white">
            ¿Tienes un proyecto en mente?
          </h3>
          <p class="text-gray-300 leading-relaxed">
            Nuestro equipo de expertos está listo para hacer realidad tu visión. 
            Desde la conceptualización hasta la entrega final, te acompañamos en cada paso.
          </p>
          
          <!-- Features -->
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-4 text-center">
              <Icon name="ph:users-fill" class="w-8 h-8 text-primary-green mx-auto mb-2" />
              <div class="text-white font-semibold">Equipo Experto</div>
              <div class="text-gray-400 text-sm">15+ años experiencia</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-4 text-center">
              <Icon name="ph:certificate-fill" class="w-8 h-8 text-primary-green mx-auto mb-2" />
              <div class="text-white font-semibold">Calidad Garantizada</div>
              <div class="text-gray-400 text-sm">Certificaciones</div>
            </div>
          </div>
        </div>

        <!-- Call to Action -->
        <div class="text-center lg:text-right space-y-6">
          <div class="space-y-2">
            <h4 class="text-xl font-bold text-white">¿Listo para empezar?</h4>
            <p class="text-gray-300">Contacta con nosotros hoy mismo</p>
          </div>
          
          <div class="flex flex-col sm:flex-row lg:flex-col gap-4 lg:items-end">
            <Button variant="success" href="/contacto">
              <Icon name="ph:chat-circle-text-fill" class="w-5 h-5" />
              Iniciar Proyecto
            </Button>
            <Button variant="outline" href="/servicios">
              <Icon name="ph:list-fill" class="w-5 h-5" />
              Ver Servicios
            </Button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
---
// ContactForm.astro - Comprehensive contact form with all fields
import { Icon } from "astro-icon/components";
import SectionLayout from '../ui/SectionLayout.astro';
import SectionHeader from '../ui/SectionHeader.astro';
import Button from '../ui/Button.astro';
---

<SectionLayout id="form" background="gray">
  <SectionHeader 
    tagline="Contáctanos"
    title="Contáctenos"
    description="Estamos aquí para ayudarte con tus consultas."
  />
  
  <form class="content-stretch flex flex-col gap-5 lg:gap-6 items-start justify-start max-w-[768px] relative w-full" action="/contacto" method="post">
      <!-- First Name and Last Name -->
      <div class="content-stretch flex flex-col lg:flex-row gap-5 lg:gap-6 items-start justify-start relative w-full">
        <div class="basis-0 content-stretch flex flex-col gap-2 grow items-start justify-start min-h-px min-w-px relative w-full">
          <label for="nombre" class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] relative text-[#0c0801] text-[14px] lg:text-[18px] w-full">
            <p class="leading-[1.6]">Nombre</p>
          </label>
          <div class="bg-[rgba(255,255,255,0)] box-border content-stretch flex gap-2 items-center justify-start px-3 py-2 relative rounded-[12px] w-full">
            <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[14px]" />
            <input type="text" id="nombre" name="nombre" required class="w-full bg-transparent border-none outline-none font-['Heebo:Regular',_sans-serif] text-[14px] lg:text-[18px] text-[#0c0801]" />
          </div>
        </div>
        <div class="basis-0 content-stretch flex flex-col gap-2 grow items-start justify-start min-h-px min-w-px relative w-full">
          <label for="apellido" class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] relative text-[#0c0801] text-[14px] lg:text-[18px] w-full">
            <p class="leading-[1.6]">Apellido</p>
          </label>
          <div class="bg-[rgba(255,255,255,0)] box-border content-stretch flex gap-2 items-center justify-start px-3 py-2 relative rounded-[12px] w-full">
            <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[14px]" />
            <input type="text" id="apellido" name="apellido" required class="w-full bg-transparent border-none outline-none font-['Heebo:Regular',_sans-serif] text-[14px] lg:text-[18px] text-[#0c0801]" />
          </div>
        </div>
      </div>
      
      <!-- Email and Phone -->
      <div class="content-stretch flex flex-col lg:flex-row gap-5 lg:gap-6 items-start justify-start relative w-full">
        <div class="basis-0 content-stretch flex flex-col gap-2 grow items-start justify-start min-h-px min-w-px relative w-full">
          <label for="correo" class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] relative text-[#0c0801] text-[14px] lg:text-[18px] w-full">
            <p class="leading-[1.6]">Correo</p>
          </label>
          <div class="bg-[rgba(255,255,255,0)] box-border content-stretch flex gap-2 items-center justify-start px-3 py-2 relative rounded-[12px] w-full">
            <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[14px]" />
            <input type="email" id="correo" name="correo" required class="w-full bg-transparent border-none outline-none font-['Heebo:Regular',_sans-serif] text-[14px] lg:text-[18px] text-[#0c0801]" />
          </div>
        </div>
        <div class="basis-0 content-stretch flex flex-col gap-2 grow items-start justify-start min-h-px min-w-px relative w-full">
          <label for="telefono" class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] relative text-[#0c0801] text-[14px] lg:text-[18px] w-full">
            <p class="leading-[1.6]">Número telefónico</p>
          </label>
          <div class="bg-[rgba(255,255,255,0)] box-border content-stretch flex gap-2 items-center justify-start px-3 py-2 relative rounded-[12px] w-full">
            <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[14px]" />
            <input type="tel" id="telefono" name="telefono" class="w-full bg-transparent border-none outline-none font-['Heebo:Regular',_sans-serif] text-[14px] lg:text-[18px] text-[#0c0801]" />
          </div>
        </div>
      </div>

      <!-- Subject Select -->
      <div class="content-stretch flex flex-col gap-2 items-start justify-start relative w-full">
        <label for="tema" class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] relative text-[#0c0801] text-[14px] lg:text-[18px] w-full">
          <p class="leading-[1.6]">Selecciona un tema</p>
        </label>
        <div class="bg-[rgba(255,255,255,0)] box-border content-stretch flex gap-4 items-center justify-start px-3 py-2 relative rounded-[12px] w-full">
          <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[14px]" />
          <select id="tema" name="tema" class="basis-0 grow min-h-px min-w-px relative bg-transparent border-none outline-none font-['Heebo:Regular',_sans-serif] text-[14px] lg:text-[18px] text-[#0c0801]">
            <option value="">Selecciona uno...</option>
            <option value="construccion">Construcción</option>
            <option value="remodelacion">Remodelación</option>
            <option value="consulta">Consulta General</option>
            <option value="presupuesto">Solicitar Presupuesto</option>
          </select>
          <div class="overflow-clip relative size-6 pointer-events-none">
            <Icon name="ph:caret-down" class="w-6 h-6 text-[#0c0801]" />
          </div>
        </div>
      </div>

      <!-- Radio Buttons -->
      <fieldset class="box-border content-stretch flex flex-col gap-4 items-start justify-start px-0 py-4 relative w-full border-none">
        <legend class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] relative text-[#0c0801] text-[14px] lg:text-[18px]">
          <p class="leading-[1.6]">¿Cómo te describirías?</p>
        </legend>
        <div class="content-stretch flex flex-col gap-3.5 items-start justify-start relative w-full">
          <!-- Row 1 -->
          <div class="content-stretch flex flex-col lg:flex-row gap-3 lg:gap-6 h-auto lg:h-6 items-start justify-start relative w-full">
            <div class="basis-0 content-stretch flex gap-3 grow items-center justify-start min-h-px min-w-px relative">
              <div class="bg-[rgba(255,255,255,0)] relative rounded-[100px] size-[18px]">
                <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[102px]" />
                <input type="radio" id="particular" name="descripcion" value="particular" class="absolute inset-0 opacity-0 cursor-pointer" />
              </div>
              <label for="particular" class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] relative text-[#0c0801] text-[14px] lg:text-[18px] cursor-pointer">
                <p class="leading-[1.6]">Particular</p>
              </label>
            </div>
            <div class="basis-0 content-stretch flex gap-3 grow items-center justify-start min-h-px min-w-px relative">
              <div class="bg-[rgba(255,255,255,0)] relative rounded-[100px] size-[18px]">
                <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[102px]" />
                <input type="radio" id="empresa" name="descripcion" value="empresa" class="absolute inset-0 opacity-0 cursor-pointer" />
              </div>
              <label for="empresa" class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] relative text-[#0c0801] text-[14px] lg:text-[18px] cursor-pointer">
                <p class="leading-[1.6]">Empresa</p>
              </label>
            </div>
          </div>
          
          <!-- Row 2 -->
          <div class="content-stretch flex flex-col lg:flex-row gap-3 lg:gap-6 h-auto lg:h-6 items-start justify-start relative w-full">
            <div class="basis-0 content-stretch flex gap-3 grow items-center justify-start min-h-px min-w-px relative">
              <div class="bg-[rgba(255,255,255,0)] relative rounded-[100px] size-[18px]">
                <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[102px]" />
                <input type="radio" id="arquitecto" name="descripcion" value="arquitecto" class="absolute inset-0 opacity-0 cursor-pointer" />
              </div>
              <label for="arquitecto" class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] relative text-[#0c0801] text-[14px] lg:text-[18px] cursor-pointer">
                <p class="leading-[1.6]">Arquitecto</p>
              </label>
            </div>
            <div class="basis-0 content-stretch flex gap-3 grow items-center justify-start min-h-px min-w-px relative">
              <div class="bg-[rgba(255,255,255,0)] relative rounded-[100px] size-[18px]">
                <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[102px]" />
                <input type="radio" id="constructor" name="descripcion" value="constructor" class="absolute inset-0 opacity-0 cursor-pointer" />
              </div>
              <label for="constructor" class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] relative text-[#0c0801] text-[14px] lg:text-[18px] cursor-pointer">
                <p class="leading-[1.6]">Constructor</p>
              </label>
            </div>
          </div>

          <!-- Row 3 -->
          <div class="content-stretch flex flex-col lg:flex-row gap-3 lg:gap-6 h-auto lg:h-6 items-start justify-start relative w-full">
            <div class="basis-0 content-stretch flex gap-3 grow items-center justify-start min-h-px min-w-px relative">
              <div class="bg-[rgba(255,255,255,0)] relative rounded-[100px] size-[18px]">
                <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[102px]" />
                <input type="radio" id="inversor" name="descripcion" value="inversor" class="absolute inset-0 opacity-0 cursor-pointer" />
              </div>
              <label for="inversor" class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] relative text-[#0c0801] text-[14px] lg:text-[18px] cursor-pointer">
                <p class="leading-[1.6]">Inversor</p>
              </label>
            </div>
            <div class="basis-0 content-stretch flex gap-3 grow items-center justify-start min-h-px min-w-px relative">
              <div class="bg-[rgba(255,255,255,0)] relative rounded-[100px] size-[18px]">
                <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[102px]" />
                <input type="radio" id="otro" name="descripcion" value="otro" class="absolute inset-0 opacity-0 cursor-pointer" />
              </div>
              <label for="otro" class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] relative text-[#0c0801] text-[14px] lg:text-[18px] cursor-pointer">
                <p class="leading-[1.6]">Otro</p>
              </label>
            </div>
          </div>
        </div>
      </fieldset>

      <!-- Message Textarea -->
      <div class="content-stretch flex flex-col gap-2 items-start justify-start relative w-full">
        <label for="mensaje" class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] relative text-[#0c0801] text-[14px] lg:text-[18px] w-full">
          <p class="leading-[1.6]">Mensaje</p>
        </label>
        <div class="bg-[rgba(255,255,255,0)] box-border content-stretch flex h-[150px] lg:h-[180px] items-start justify-start p-[12px] relative rounded-[12px] w-full">
          <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[14px]" />
          <textarea id="mensaje" name="mensaje" placeholder="Escribe tu mensaje..." required class="basis-0 grow min-h-px min-w-px relative bg-transparent border-none outline-none font-['Heebo:Regular',_sans-serif] text-[14px] lg:text-[18px] text-[#0c0801] placeholder-[rgba(12,8,1,0.6)] resize-none"></textarea>
        </div>
      </div>

      <!-- Checkbox -->
      <div class="box-border content-stretch flex gap-2 items-center justify-start pb-4 pt-0 px-0 relative">
        <div class="bg-[rgba(255,255,255,0)] relative rounded-[4px] size-[18px]">
          <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[6px]" />
          <input type="checkbox" id="terminos" name="terminos" required class="absolute inset-0 opacity-0 cursor-pointer" />
        </div>
        <label for="terminos" class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] relative text-[#0c0801] text-[14px] lg:text-[16px] cursor-pointer">
          <p class="leading-[1.6]">Acepto los <a href="/terminos" class="underline">Términos y Condiciones</a></p>
        </label>
      </div>

      <!-- Submit Button -->
      <Button type="submit" variant="success">Enviar</Button>
    </form>
</SectionLayout>
          
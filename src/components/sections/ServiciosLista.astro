---
import { Icon } from "astro-icon/components";

const services = [
  {
    icon: "ph:house",
    title: "Explora Nuestros Servicios Especializados en Construcción y Renovación",
    description: "Ofrecemos una amplia gama de servicios de construcción adaptados a tus necesidades.",
    link: "/servicios/explora"
  },
  {
    icon: "ph:buildings",
    title: "Construcción Residencial: Tu Hogar Soñado Hecho Realidad",
    description: "Creamos espacios únicos y personalizados para cada cliente.",
    link: "/servicios/residencial"
  },
  {
    icon: "ph:wrench",
    title: "Renovaciones: Dale Nueva Vida a Tus Espacios Existentes",
    description: "Transformamos tus espacios con un enfoque en la calidad y el diseño.",
    link: "/servicios/renovaciones"
  }
];
---

<section 
  class="bg-cover bg-center bg-no-repeat py-28 px-16"
  style="background-image: url('/images/servicios-lista.jpg'); background-color: rgba(0,0,0,0.5); background-blend-mode: overlay;"
  data-aos="fade-up"
>
  <div class="max-w-[1280px] mx-auto flex flex-col items-center gap-20">
    <h2 class="max-w-[768px] font-urbanist font-medium text-[48px] leading-[1.2] tracking-[0.48px] text-center text-white" data-aos="fade-up">
      Nuestros Servicios: Construcción de Calidad para Cada Proyecto
    </h2>
    <div class="w-full grid grid-cols-1 md:grid-cols-3 gap-12">
      {services.map((service, index) => (
        <div class="flex flex-col gap-8 items-center text-center text-white" data-aos="fade-up" data-aos-delay={index * 100}>
          <div class="flex flex-col gap-6 items-center">
            <div class="w-12 h-12">
              <Icon name={service.icon} class="w-full h-full" />
            </div>
            <h3 class="font-urbanist font-medium text-[32px] leading-[1.2] tracking-[0.32px]">
              {service.title}
            </h3>
            <p class="font-heebo font-normal text-[18px] leading-[1.6]">
              {service.description}
            </p>
          </div>
          <a href={service.link} class="flex items-center gap-2 font-heebo font-medium text-[18px] text-white hover:opacity-80 transition-opacity">
            <span>Ver</span>
            <Icon name="ph:caret-right" class="w-6 h-6" />
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
            <p class="leading-[1.2]">Construcción</p>
          </div>
          <div class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] min-w-full relative shrink-0 text-[14px] text-white" style="width: min-content">
            <p class="leading-[1.6]">Construcción de edificaciones con los más altos estándares de calidad y seguridad.</p>
          </div>
          <a href="/servicios/construccion" class="content-stretch flex gap-2 items-center justify-center overflow-clip relative rounded-[100px] shrink-0 hover:opacity-80 transition-opacity">
            <div class="font-['Heebo:Medium',_sans-serif] font-medium leading-[0] relative shrink-0 text-[14px] text-nowrap text-white">
              <p class="leading-[1.6] whitespace-pre">Ver más</p>
            </div>
            <div class="overflow-clip relative shrink-0 size-6">
              <img alt="chevron_right" class="block max-w-none size-full" src="http://localhost:3845/assets/aea3cabe7b26afc0e72967ff812d5074c4da9be9.svg" />
            </div>
          </a>
        </div>

        <!-- Servicio 2: Remodelación -->
        <div class="content-stretch flex flex-col gap-3 items-start justify-start relative shrink-0 w-full">
          <div class="relative shrink-0 size-12">
            <img alt="renovation" class="block max-w-none size-full" src="http://localhost:3845/assets/5dd8878797d1434ddb4de808bcc47e940388b952.svg" />
          </div>
          <div class="font-['Urbanist:Medium',_sans-serif] font-medium leading-[0] min-w-full relative shrink-0 text-[24px] text-white tracking-[0.24px]" style="width: min-content">
            <p class="leading-[1.2]">Remodelación</p>
          </div>
          <div class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] min-w-full relative shrink-0 text-[14px] text-white" style="width: min-content">
            <p class="leading-[1.6]">Renovamos y transformamos espacios existentes con diseños modernos y funcionales.</p>
          </div>
          <a href="/servicios/remodelacion" class="content-stretch flex gap-2 items-center justify-center overflow-clip relative rounded-[100px] shrink-0 hover:opacity-80 transition-opacity">
            <div class="font-['Heebo:Medium',_sans-serif] font-medium leading-[0] relative shrink-0 text-[14px] text-nowrap text-white">
              <p class="leading-[1.6] whitespace-pre">Ver más</p>
            </div>
            <div class="overflow-clip relative shrink-0 size-6">
              <img alt="chevron_right" class="block max-w-none size-full" src="http://localhost:3845/assets/aea3cabe7b26afc0e72967ff812d5074c4da9be9.svg" />
            </div>
          </a>
        </div>

        <!-- Servicio 3: Mantenimiento -->
        <div class="content-stretch flex flex-col gap-3 items-start justify-start relative shrink-0 w-full">
          <div class="relative shrink-0 size-12">
            <img alt="maintenance" class="block max-w-none size-full" src="http://localhost:3845/assets/201b48490cc06fe495808dde4a78d93ebff06d02.svg" />
          </div>
          <div class="font-['Urbanist:Medium',_sans-serif] font-medium leading-[0] min-w-full relative shrink-0 text-[24px] text-white tracking-[0.24px]" style="width: min-content">
            <p class="leading-[1.2]">Mantenimiento</p>
          </div>
          <div class="font-['Heebo:Regular',_sans-serif] font-normal leading-[0] min-w-full relative shrink-0 text-[14px] text-white" style="width: min-content">
            <p class="leading-[1.6]">Servicios de mantenimiento preventivo y correctivo para conservar tus espacios.</p>
          </div>
          <a href="/servicios/mantenimiento" class="content-stretch flex gap-2 items-center justify-center overflow-clip relative rounded-[100px] shrink-0 hover:opacity-80 transition-opacity">
            <div class="font-['Heebo:Medium',_sans-serif] font-medium leading-[0] relative shrink-0 text-[14px] text-nowrap text-white">
              <p class="leading-[1.6] whitespace-pre">Ver más</p>
            </div>
            <div class="overflow-clip relative shrink-0 size-6">
              <img alt="chevron_right" class="block max-w-none size-full" src="http://localhost:3845/assets/aea3cabe7b26afc0e72967ff812d5074c4da9be9.svg" />
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

---
import { Icon } from "astro-icon/components";

const services = [
  {
    icon: "ph:house",
    title: "Explora Nuestros Servicios Especializados en Construcción y Renovación",
    description: "Ofrecemos una amplia gama de servicios de construcción adaptados a tus necesidades.",
    link: "/servicios/explora"
  },
  {
    icon: "ph:buildings",
    title: "Construcción Residencial: Tu Hogar Soñado Hecho Realidad",
    description: "Creamos espacios únicos y personalizados para cada cliente.",
    link: "/servicios/residencial"
  },
  {
    icon: "ph:wrench",
    title: "Renovaciones: Dale Nueva Vida a Tus Espacios Existentes",
    description: "Transformamos tus espacios con un enfoque en la calidad y el diseño.",
    link: "/servicios/renovaciones"
  }
];
---

<section 
  class="bg-cover bg-center bg-no-repeat py-28 px-16"
  style="background-image: url('/images/servicios-lista.jpg'); background-color: rgba(0,0,0,0.5); background-blend-mode: overlay;"
  data-aos="fade-up"
>
  <div class="max-w-[1280px] mx-auto flex flex-col items-center gap-20">
    <h2 class="max-w-[768px] font-urbanist font-medium text-[48px] leading-[1.2] tracking-[0.48px] text-center text-white" data-aos="fade-up">
      Nuestros Servicios: Construcción de Calidad para Cada Proyecto
    </h2>
    <div class="w-full grid grid-cols-1 md:grid-cols-3 gap-12">
      {services.map((service, index) => (
        <div class="flex flex-col gap-8 items-center text-center text-white" data-aos="fade-up" data-aos-delay={index * 100}>
          <div class="flex flex-col gap-6 items-center">
            <div class="w-12 h-12">
              <Icon name={service.icon} class="w-full h-full" />
            </div>
            <h3 class="font-urbanist font-medium text-[32px] leading-[1.2] tracking-[0.32px]">
              {service.title}
            </h3>
            <p class="font-heebo font-normal text-[18px] leading-[1.6]">
              {service.description}
            </p>
          </div>
          <a href={service.link} class="flex items-center gap-2 font-heebo font-medium text-[18px] text-white hover:opacity-80 transition-opacity">
            <span>Ver</span>
            <Icon name="ph:caret-right" class="w-6 h-6" />
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
            

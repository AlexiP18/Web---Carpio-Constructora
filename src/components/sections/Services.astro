---
import { Icon } from 'astro-icon/components';

// Asset constants from Figma
const servicesImage = "http://localhost:3845/assets/b7b4e314cc3eb923b7fa8aac8183d1866fe76120.png";
---

<section class="bg-neutral-lighter px-5 py-16 lg:px-16 lg:py-28 relative overflow-hidden">
  <div class="max-w-container-large mx-auto">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-start">
      <!-- Services List -->
      <div class="lg:max-w-large" data-aos="fade-up">
        <p class="font-heebo font-semibold text-text-small text-neutral-darkest mb-4 lg:mb-6">
          Nuestros mejores servicios
        </p>
        
        <div class="space-y-2 lg:space-y-4">
          <!-- Service 1 - Active -->
          <a 
            href="/servicios/proyectos-industriales" 
            class="block border-b-2 border-neutral-darkest py-4 lg:py-6 group transition-all duration-300 hover:bg-neutral-lighter/50"
            data-aos="fade-right"
            data-aos-delay="100"
          >
            <div class="flex items-center justify-between gap-4 lg:gap-8">
              <div class="flex items-center gap-4 lg:gap-8">
                <span class="font-urbanist font-medium text-heading-6 lg:text-[32px] text-neutral-darkest group-hover:text-forest-green transition-colors duration-300">
                  01
                </span>
                <h3 class="font-urbanist font-medium text-heading-6 lg:text-heading-1 text-neutral-darkest group-hover:text-forest-green leading-tight transition-colors duration-300">
                  Proyectos y Construcciones Industriales
                </h3>
              </div>
              <Icon 
                name="ph:arrow-right" 
                class="w-5 h-5 lg:w-8 lg:h-8 text-neutral-darkest group-hover:text-forest-green group-hover:translate-x-2 transition-all duration-300 flex-shrink-0" 
              />
            </div>
          </a>
          
          <!-- Service 2 -->
          <a 
            href="/servicios/centros-logisticos" 
            class="block border-b-2 border-neutral-darkest py-4 lg:py-6 group transition-all duration-300 hover:bg-neutral-lighter/50"
            data-aos="fade-right"
            data-aos-delay="200"
          >
            <div class="flex items-center justify-between gap-4 lg:gap-8">
              <div class="flex items-center gap-4 lg:gap-8">
                <span class="font-urbanist font-medium text-heading-6 lg:text-[32px] text-neutral-medium group-hover:text-forest-green transition-colors duration-300">
                  02
                </span>
                <h3 class="font-urbanist font-medium text-heading-6 lg:text-heading-1 text-neutral-medium group-hover:text-forest-green leading-tight transition-colors duration-300">
                  Centros de Distribución Logística
                </h3>
              </div>
              <Icon 
                name="ph:arrow-right" 
                class="w-5 h-5 lg:w-8 lg:h-8 text-neutral-medium group-hover:text-forest-green group-hover:translate-x-2 transition-all duration-300 flex-shrink-0" 
              />
            </div>
          </a>
          
          <!-- Service 3 -->
          <a 
            href="/servicios/planimetria" 
            class="block border-b-2 border-neutral-darkest py-4 lg:py-6 group transition-all duration-300 hover:bg-neutral-lighter/50"
            data-aos="fade-right"
            data-aos-delay="300"
          >
            <div class="flex items-center justify-between gap-4 lg:gap-8">
              <div class="flex items-center gap-4 lg:gap-8">
                <span class="font-urbanist font-medium text-heading-6 lg:text-[32px] text-neutral-medium group-hover:text-forest-green transition-colors duration-300">
                  03
                </span>
                <h3 class="font-urbanist font-medium text-heading-6 lg:text-heading-1 text-neutral-medium group-hover:text-forest-green leading-tight transition-colors duration-300">
                  Planimetría
                </h3>
              </div>
              <Icon 
                name="ph:arrow-right" 
                class="w-5 h-5 lg:w-8 lg:h-8 text-neutral-medium group-hover:text-forest-green group-hover:translate-x-2 transition-all duration-300 flex-shrink-0" 
              />
            </div>
          </a>
          
          <!-- Service 4 -->
          <a 
            href="/servicios/oficinas-industriales" 
            class="block border-b-2 border-neutral-darkest py-4 lg:py-6 group transition-all duration-300 hover:bg-neutral-lighter/50"
            data-aos="fade-right"
            data-aos-delay="400"
          >
            <div class="flex items-center justify-between gap-4 lg:gap-8">
              <div class="flex items-center gap-4 lg:gap-8">
                <span class="font-urbanist font-medium text-heading-6 lg:text-[32px] text-neutral-medium group-hover:text-forest-green transition-colors duration-300">
                  04
                </span>
                <h3 class="font-urbanist font-medium text-heading-6 lg:text-heading-1 text-neutral-medium group-hover:text-forest-green leading-tight transition-colors duration-300">
                  Oficinas para Complejos Industriales
                </h3>
              </div>
              <Icon 
                name="ph:arrow-right" 
                class="w-5 h-5 lg:w-8 lg:h-8 text-neutral-medium group-hover:text-forest-green group-hover:translate-x-2 transition-all duration-300 flex-shrink-0" 
              />
            </div>
          </a>
        </div>
      </div>
      
      <!-- Service Image -->
      <div 
        class="hidden lg:block w-full h-[560px] bg-cover bg-center rounded-large shadow-lg"
        style={`background-image: url('${servicesImage}')`}
        data-aos="fade-left"
        data-aos-delay="200"
      />
    </div>
  </div>
</section>

---
const TabPane1 = '/images/tab-pane-1.png';
---

<section class="bg-[#dad9d8] px-4 sm:px-16 py-14 sm:py-28 relative overflow-hidden">
  <div class="max-w-[1280px] mx-auto">
    <div class="max-w-[768px] mb-10 sm:mb-20">
      <p class="font-['Heebo',_sans-serif] font-semibold text-[16px] text-[#0c0801]">Nuestros mejores servicios</p>
      <div class="mt-4 space-y-2">
        <a href="/servicios/proyectos-industriales" class="block border-b-2 border-[#0c0801] py-6 group">
          <div class="flex items-center gap-8">
            <span class="font-['Urbanist',_sans-serif] font-medium text-[32px] text-[#0c0801] group-hover:text-gray-600">01</span>
            <h3 class="font-['Urbanist',_sans-serif] font-medium text-[40px] sm:text-[84px] text-[#0c0801] group-hover:text-gray-600 leading-none">Proyectos y Construcciones Industriales</h3>
          </div>
        </a>
        <a href="/servicios/centros-logisticos" class="block border-b-2 border-[#0c0801] py-6 group">
          <div class="flex items-center gap-8">
            <span class="font-['Urbanist',_sans-serif] font-medium text-[32px] text-gray-400 group-hover:text-gray-600">02</span>
            <h3 class="font-['Urbanist',_sans-serif] font-medium text-[40px] sm:text-[84px] text-gray-400 group-hover:text-gray-600 leading-none">Centros de Distribución Logística</h3>
          </div>
        </a>
        <a href="/servicios/planimetria" class="block border-b-2 border-[#0c0801] py-6 group">
          <div class="flex items-center gap-8">
            <span class="font-['Urbanist',_sans-serif] font-medium text-[32px] text-gray-400 group-hover:text-gray-600">03</span>
            <h3 class="font-['Urbanist',_sans-serif] font-medium text-[40px] sm:text-[84px] text-gray-400 group-hover:text-gray-600 leading-none">Planimetría</h3>
          </div>
        </a>
        <a href="/servicios/oficinas-industriales" class="block border-b-2 border-[#0c0801] py-6 group">
          <div class="flex items-center gap-8">
            <span class="font-['Urbanist',_sans-serif] font-medium text-[32px] text-gray-400 group-hover:text-gray-600">04</span>
            <h3 class="font-['Urbanist',_sans-serif] font-medium text-[40px] sm:text-[84px] text-gray-400 group-hover:text-gray-600 leading-none">Oficinas para Complejos Industriales</h3>
          </div>
        </a>
      </div>
    </div>
  </div>
  <div class="hidden lg:block absolute top-24 right-0 w-[38%] h-[560px] bg-cover bg-center rounded-[40px]" style={`backgroundImage: url(${TabPane1})`}></div>
</section>

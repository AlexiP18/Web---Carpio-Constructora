---
import { Icon } from "astro-icon/components";
import Button from '../../ui/Button.astro';

// Contact data basado en la imagen de referencia
const contactInfo = {
  email: "carpio.constructora@gmail.com",
  phone: "+593 95 632 4598", 
  address: "Ambato, Tungurahua, Ecuador"
};
---

<section class="py-20 bg-gradient-to-br from-white via-gray-50 to-slate-100 relative overflow-hidden">
  <!-- Background decorations -->
  <div class="absolute inset-0">
    <div class="absolute top-20 left-20 w-40 h-40 bg-[#103646]/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-20 w-32 h-32 bg-[#103646]/8 rounded-full blur-2xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <!-- Header -->
    <div class="text-center max-w-4xl mx-auto mb-16" data-aos="fade-up">
      <div class="inline-flex items-center gap-2 bg-[#103646]/10 backdrop-blur-sm border border-[#103646]/20 rounded-full px-4 py-2 mb-6">
        <Icon name="ph:phone-fill" class="w-5 h-5 text-[#103646]" />
        <span class="text-[#103646] font-semibold text-sm uppercase tracking-wider">Contacto</span>
      </div>
      
      <h2 class="text-4xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
        <span class="bg-gradient-to-r from-[#103646] to-[#103646]/70 bg-clip-text text-transparent">Contáctanos</span>
      </h2>
      
      <p class="text-xl text-gray-600 leading-relaxed">
        Estamos aquí para ayudarte con tu proyecto de construcción
      </p>
    </div>

    <!-- 3 Cards superiores en fila -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12" data-aos="fade-up" data-aos-delay="100">
      
      <!-- Card 1: Correo Electrónico -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200/50 hover:border-[#103646]/30 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-[1.02]">
        <div class="text-center">
          <div class="w-12 h-12 bg-[#103646] rounded-xl flex items-center justify-center mx-auto mb-4 shadow-lg">
            <Icon name="ph:envelope-fill" class="w-6 h-6 text-white" />
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Correo Electrónico</h3>
          <div class="space-y-1">
            <a 
              href={`mailto:${contactInfo.email}`}
              class="block text-[#103646] hover:text-[#103646]/80 font-medium text-sm transition-colors"
            >
              {contactInfo.email}
            </a>
            <a 
              href={`mailto:ventas@constructoracarpio.com`}
              class="block text-[#103646] hover:text-[#103646]/80 font-medium text-sm transition-colors"
            >
              ventas@constructoracarpio.com
            </a>
          </div>
        </div>
      </div>

      <!-- Card 2: Redes Sociales -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200/50 hover:border-[#103646]/30 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-[1.02]">
        <div class="text-center">
          <div class="w-12 h-12 bg-[#103646] rounded-xl flex items-center justify-center mx-auto mb-4 shadow-lg">
            <Icon name="ph:share-network-fill" class="w-6 h-6 text-white" />
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-4">Redes Sociales</h3>
          <div class="flex justify-center gap-3">
            <a 
              href="https://wa.me/593956324598"
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-[#25D366]/10 backdrop-blur-sm border border-[#25D366]/20 rounded-xl flex items-center justify-center hover:bg-[#25D366] hover:border-[#25D366] group transition-all duration-300 hover:scale-110"
              aria-label="Escríbenos por WhatsApp"
            >
              <Icon 
                name="ph:whatsapp-logo-fill" 
                class="w-5 h-5 text-[#25D366] group-hover:text-white transition-colors duration-300" 
              />
            </a>
            <a 
              href="https://instagram.com"
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-[#E4405F]/10 backdrop-blur-sm border border-[#E4405F]/20 rounded-xl flex items-center justify-center hover:bg-[#E4405F] hover:border-[#E4405F] group transition-all duration-300 hover:scale-110"
              aria-label="Síguenos en Instagram"
            >
              <Icon 
                name="ph:instagram-logo-fill" 
                class="w-5 h-5 text-[#E4405F] group-hover:text-white transition-colors duration-300" 
              />
            </a>
            <a 
              href="https://facebook.com"
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-[#1877F2]/10 backdrop-blur-sm border border-[#1877F2]/20 rounded-xl flex items-center justify-center hover:bg-[#1877F2] hover:border-[#1877F2] group transition-all duration-300 hover:scale-110"
              aria-label="Síguenos en Facebook"
            >
              <Icon 
                name="ph:facebook-logo-fill" 
                class="w-5 h-5 text-[#1877F2] group-hover:text-white transition-colors duration-300" 
              />
            </a>
          </div>
        </div>
      </div>

      <!-- Card 3: Ubicación -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200/50 hover:border-[#103646]/30 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-[1.02]">
        <div class="text-center">
          <div class="w-12 h-12 bg-[#103646] rounded-xl flex items-center justify-center mx-auto mb-4 shadow-lg">
            <Icon name="ph:map-pin-fill" class="w-6 h-6 text-white" />
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Ubicación</h3>
          <p class="text-gray-600 text-sm mb-4">{contactInfo.address}</p>
          <Button
            href="https://maps.google.com/?q=Quito,+Pichincha,+Ecuador"
            variant="primary"
            size="sm"
            icon="ph:arrow-square-out"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-[#103646] hover:bg-[#103646]/90"
          >
            Ver en Maps
          </Button>
        </div>
      </div>
      
    </div>

    <!-- Card Principal del Mapa -->
    <div class="bg-white rounded-3xl p-8 border border-gray-200/50 shadow-xl" data-aos="fade-up" data-aos-delay="200">
      <div class="mb-6 text-center">
        <h3 class="text-2xl font-bold text-gray-900 mb-2">Nuestra Ubicación</h3>
        <p class="text-gray-600">Encuéntranos en Quito, Ecuador</p>
      </div>
      
      <!-- Mapa Container -->
      <div class="relative rounded-2xl overflow-hidden shadow-lg">
        <!-- Google Maps Embed como fondo -->
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d18974.1977330062!2d-78.64793820700059!3d-1.272920604749577!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sec!4v1759915262876!5m2!1sen!2sec" 
          width="100%" 
          height="400" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
          class="w-full h-96 rounded-2xl"
        ></iframe>
      </div>
    </div>
  </div>
</section>

---
import { Icon } from "astro-icon/components";
import Button from '../../ui/Button.astro';

// Contact data basado en la imagen de referencia
const contactInfo = {
  email: "info@constructoracarpio.com",
  phone: "+593 95 632 4598", 
  address: "Quito, Pichincha, Ecuador"
};
---

<section class="py-20 bg-gradient-to-br from-white via-gray-50 to-slate-100 relative overflow-hidden">
  <!-- Background decorations -->
  <div class="absolute inset-0">
    <div class="absolute top-20 left-20 w-40 h-40 bg-[#103646]/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-20 w-32 h-32 bg-[#D79528]/5 rounded-full blur-2xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <!-- Header -->
    <div class="text-center max-w-4xl mx-auto mb-16" data-aos="fade-up">
      <div class="inline-flex items-center gap-2 bg-[#103646]/10 backdrop-blur-sm border border-[#103646]/20 rounded-full px-4 py-2 mb-6">
        <Icon name="ph:phone-fill" class="w-5 h-5 text-[#103646]" />
        <span class="text-[#103646] font-semibold text-sm uppercase tracking-wider">Construcción</span>
      </div>
      
      <h2 class="text-4xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
        <span class="bg-gradient-to-r from-[#103646] to-[#D79528] bg-clip-text text-transparent">Contáctanos</span>
      </h2>
      
      <p class="text-xl text-gray-600 leading-relaxed">
        Estamos aquí para ayudarte con tu proyecto de construcción
      </p>
    </div>

    <!-- Grid de dos columnas -->
    <div class="grid lg:grid-cols-2 gap-16 items-start">
      
      <!-- Columna izquierda - Información de contacto -->
      <div class="space-y-8" data-aos="fade-right" data-aos-delay="100">
        
        <!-- Correo -->
        <div class="bg-white rounded-3xl p-8 border border-gray-200/50 hover:border-[#103646]/30 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-[1.02]">
          <div class="flex items-center gap-6 mb-4">
            <div class="w-16 h-16 bg-gradient-to-br from-[#103646] to-[#D79528] rounded-2xl flex items-center justify-center shadow-lg">
              <Icon name="ph:envelope-fill" class="w-8 h-8 text-white" />
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-1">Correo Electrónico</h3>
              <p class="text-gray-600">Escríbenos tu consulta</p>
            </div>
          </div>
          <div class="space-y-2">
            <a 
              href={`mailto:${contactInfo.email}`}
              class="block text-[#103646] hover:text-[#D79528] font-semibold text-lg transition-colors"
            >
              {contactInfo.email}
            </a>
            <a 
              href={`mailto:ventas@constructoracarpio.com`}
              class="block text-[#103646] hover:text-[#D79528] font-semibold text-lg transition-colors"
            >
              ventas@constructoracarpio.com
            </a>
          </div>
        </div>

        <!-- Teléfono -->
        <div class="bg-white rounded-3xl p-8 border border-gray-200/50 hover:border-[#D79528]/30 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-[1.02]">
          <div class="flex items-center gap-6 mb-4">
            <div class="w-16 h-16 bg-gradient-to-br from-[#D79528] to-[#103646] rounded-2xl flex items-center justify-center shadow-lg">
              <Icon name="ph:phone-fill" class="w-8 h-8 text-white" />
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-1">Teléfono</h3>
              <p class="text-gray-600">Llámanos para más información</p>
            </div>
          </div>
          <a 
            href={`tel:${contactInfo.phone.replace(/[\s\-\(\)]/g, '')}`}
            class="text-[#103646] hover:text-[#D79528] font-bold text-2xl transition-colors"
          >
            {contactInfo.phone}
          </a>
          
          <div class="flex gap-3 mt-4">
            <Button
              href={`tel:${contactInfo.phone.replace(/[\s\-\(\)]/g, '')}`}
              variant="primary"
              size="sm"
              icon="ph:phone-fill"
            >
              Llamar
            </Button>
            <Button
              href="https://wa.me/593956324598"
              variant="success"
              size="sm"
              icon="ph:whatsapp-logo-fill"
              target="_blank"
              rel="noopener noreferrer"
            >
              WhatsApp
            </Button>
          </div>
        </div>

        <!-- Oficina -->
        <div class="bg-white rounded-3xl p-8 border border-gray-200/50 hover:border-[#D79528]/30 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-[1.02]">
          <div class="flex items-center gap-6 mb-4">
            <div class="w-16 h-16 bg-gradient-to-br from-[#D79528] to-[#103646] rounded-2xl flex items-center justify-center shadow-lg">
              <Icon name="ph:map-pin-fill" class="w-8 h-8 text-white" />
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-1">Ubicación</h3>
              <p class="text-gray-600">Visítanos en nuestra oficina</p>
            </div>
          </div>
          <p class="text-gray-700 font-medium text-lg mb-4">{contactInfo.address}</p>
          
          <Button
            href="https://maps.google.com/search/constructora+quito+ecuador"
            variant="outline"
            size="sm"
            icon="ph:arrow-square-out"
            target="_blank"
            rel="noopener noreferrer"
            class="border-[#103646] text-[#103646] hover:bg-[#103646] hover:text-white"
          >
            Ver en Google Maps
          </Button>
        </div>

      </div>

      <!-- Columna derecha - Mapa placeholder mejorado -->
      <div class="h-full" data-aos="fade-left" data-aos-delay="200">
        <div class="bg-gradient-to-br from-gray-100 to-gray-200 rounded-3xl h-96 lg:h-full min-h-[500px] flex items-center justify-center relative overflow-hidden shadow-lg border border-gray-200">
          <!-- Background pattern -->
          <div class="absolute inset-0 opacity-10">
            <div class="absolute top-10 left-10 w-32 h-32 bg-[#103646]/20 rounded-full blur-2xl"></div>
            <div class="absolute bottom-10 right-10 w-24 h-24 bg-[#D79528]/20 rounded-full blur-xl"></div>
          </div>
          
          <!-- Content -->
          <div class="text-center text-gray-500 relative z-10">
            <div class="w-20 h-20 bg-gradient-to-br from-[#103646] to-[#D79528] rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg">
              <Icon name="ph:map-pin-fill" class="w-10 h-10 text-white" />
            </div>
            <h3 class="text-2xl font-bold text-gray-700 mb-2">Ubicación del Mapa</h3>
            <p class="text-gray-500 mb-4">Integración de Google Maps</p>
            <Button
              href="https://maps.google.com/search/constructora+quito+ecuador"
              variant="outline"
              size="sm"
              icon="ph:arrow-square-out"
              target="_blank"
              rel="noopener noreferrer"
              class="border-[#103646] text-[#103646] hover:bg-[#103646] hover:text-white"
            >
              Ver Mapa Completo
            </Button>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>

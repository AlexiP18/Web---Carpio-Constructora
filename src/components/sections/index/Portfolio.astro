---
import { getCollection } from 'astro:content';
import Card from '../../base/Card.astro';
import Button from '../../ui/Button.astro';

const projects = (await getCollection('proyectos')).slice(0, 3);
---

<!-- Portfolio Section with Modern Card Layout -->
<section class="w-full bg-gradient-to-br from-neutral-50 to-neutral-100 py-20 lg:py-28">
  <div class="container mx-auto px-6 lg:px-8">
    <!-- Header Section -->
    <div class="text-center mb-16" data-aos="fade-up" data-aos-duration="1000">
      <!-- Tagline -->
      <div class="inline-flex items-center gap-2 bg-white/80 backdrop-blur-sm px-4 py-2 rounded-full border border-neutral-200 mb-6">
        <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
        <span class="font-heebo font-semibold text-sm text-neutral-700 tracking-wider uppercase">
          Nuestros Proyectos
        </span>
      </div>
      
      <!-- Main Title -->
      <h2 class="font-urbanist font-bold text-4xl lg:text-6xl leading-tight text-neutral-900 mb-6 max-w-4xl mx-auto">
        Calidad en cada proyecto
      </h2>
      <!-- Subtitle -->
      <p class="font-heebo text-lg lg:text-xl text-neutral-600 max-w-2xl mx-auto leading-relaxed">
        Transformamos tus ideas en realidades constructivas con excelencia y innovación.
      </p>
    </div>

    <!-- Projects Grid Layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-16">
      {projects.map((project, index) => (
        <div 
          class="group relative bg-white rounded-2xl border border-neutral-200/60 shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden"
          data-aos="fade-up" 
          data-aos-delay={index * 100} 
          data-aos-duration="800"
        >
          <!-- Image Section -->
          <div class="relative h-48 lg:h-56 overflow-hidden">
            <img 
              src={project.data.image || '/images/placeholder-image.png'}
              alt={`Imagen del proyecto ${project.data.title || project.slug}`}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
              loading={index === 0 ? 'eager' : 'lazy'}
            />
            <!-- Overlay Gradient -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
            
            <!-- Category Badge -->
            <div class="absolute top-3 left-3">
              <span class="inline-flex items-center px-2 py-1 rounded-lg text-xs font-semibold bg-white/90 backdrop-blur-sm text-neutral-700 border border-white/20">
                {project.data.category || 'Construcción'}
              </span>
            </div>

            <!-- Title Overlay -->
            <div class="absolute bottom-4 left-4 right-4">
              <h3 class="font-urbanist font-bold text-xl text-white mb-2 line-clamp-2">
                {project.data.title || 'Proyecto Sin Título'}
              </h3>
            </div>
          </div>

          <!-- Content Section -->
          <div class="p-6">
            <!-- Description -->
            <p class="font-heebo text-sm text-neutral-600 leading-relaxed mb-4 line-clamp-2">
              {project.data.description || 'Descripción del proyecto en desarrollo.'}
            </p>

            <!-- CTA Button -->
            <div class="flex items-center justify-between">
              <a 
                href={`/proyecto/${project.slug}`}
                class="inline-flex items-center gap-2 px-4 py-2 bg-neutral-900 text-white rounded-xl font-semibold text-sm hover:bg-blue-600 transform hover:scale-105 transition-all duration-300 shadow-md hover:shadow-lg"
              >
                Ver más
                <svg class="w-3 h-3 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
              
              <!-- Status Indicator -->
              <div class="flex items-center gap-1">
                <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                <span class="text-xs text-neutral-500 font-semibold">Completado</span>
              </div>
            </div>
          </div>

          <!-- Hover Effect -->
          <div class="absolute inset-0 bg-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
        </div>
      ))}
    </div>

    <!-- CTA Section -->
    <div class="text-center bg-white/60 backdrop-blur-sm rounded-3xl border border-neutral-200/60 p-8 lg:p-12" data-aos="fade-up" data-aos-delay="300">
      <h3 class="font-urbanist font-bold text-2xl lg:text-3xl text-neutral-900 mb-4">
        ¿Listo para tu próximo proyecto?
      </h3>
      <p class="font-heebo text-lg text-neutral-600 mb-8 max-w-xl mx-auto">
        Descubre todos nuestros proyectos y encuentra la inspiración para tu próxima construcción.
      </p>
      <Button
        variant="success"
        size="lg"
        href="/proyectos"
        icon="ph:arrow-right"
        class="px-8 py-4 transform hover:scale-105 transition-all duration-300"
      >
        Ver todos los proyectos
      </Button>
    </div>
  </div>
</section>

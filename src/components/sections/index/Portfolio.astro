---
import { getCollection } from "astro:content";
import { Icon } from "astro-icon/components";
import MosaicSecondaryBg from "../../ui/MosaicSecondaryBg.astro";

// Fetch projects
const allProjects = await getCollection("proyectos");
const projects = allProjects.slice(0, 8);
---

<!-- Portfolio Section - Simple Slider -->
<section class="w-full py-16 lg:py-24 relative overflow-hidden bg-brand-secondary">
  <!-- SVG Background -->
  <div class="absolute inset-0 w-full h-full pointer-events-none opacity-20">
    <MosaicSecondaryBg />
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <!-- Header Section -->
    <div class="text-center mb-12" data-aos="fade-up" data-aos-duration="800">
      <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full border border-white/20 mb-6">
        <div class="w-2 h-2 bg-white rounded-full"></div>
        <span class="font-semibold text-sm text-white tracking-wider uppercase">
          Nuestros Proyectos
        </span>
      </div>
      <h2 class="font-bold text-4xl lg:text-6xl text-white mb-6">
        Calidad en cada proyecto
      </h2>
      <p class="text-lg lg:text-xl text-white/80 max-w-2xl mx-auto">
        Transformamos tus ideas en realidades constructivas con excelencia y innovaci√≥n.
      </p>
    </div>
  </div>

  <!-- Slider Container (full width) -->
  <div class="relative">
    <!-- Navigation Buttons -->
    <button 
      id="portfolio-prev"
      class="absolute left-4 lg:left-8 top-1/2 -translate-y-1/2 z-20 w-12 h-12 lg:w-14 lg:h-14 flex items-center justify-center bg-white/20 backdrop-blur-md border border-white/30 rounded-full text-white hover:bg-white hover:text-brand-secondary transition-all duration-300"
    >
      <Icon name="ph:caret-left-bold" class="w-6 h-6" />
    </button>
    <button 
      id="portfolio-next"
      class="absolute right-4 lg:right-8 top-1/2 -translate-y-1/2 z-20 w-12 h-12 lg:w-14 lg:h-14 flex items-center justify-center bg-white/20 backdrop-blur-md border border-white/30 rounded-full text-white hover:bg-white hover:text-brand-secondary transition-all duration-300"
    >
      <Icon name="ph:caret-right-bold" class="w-6 h-6" />
    </button>

    <!-- Scrollable Track -->
    <div 
      id="portfolio-track"
      class="flex gap-6 overflow-x-auto scroll-smooth px-6 lg:px-16 pb-4 hide-scrollbar"
    >
      {projects.map((project, index) => (
        <a 
          href={`/proyecto/${project.slug}`}
          class="group flex-shrink-0 w-[320px] lg:w-[400px] bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2"
        >
          <!-- Image Container -->
          <div class="relative h-52 lg:h-64 overflow-hidden">
            <img 
              src={project.data.backgroundImage} 
              alt={project.data.title}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
            
            <!-- Category Badge -->
            <div class="absolute top-4 left-4">
              <span class="px-3 py-1.5 bg-white/95 backdrop-blur rounded-full text-xs font-bold text-gray-800 uppercase tracking-wide shadow-md">
                {project.data.tags?.[0] || "Proyecto"}
              </span>
            </div>

            <!-- Title on Image -->
            <div class="absolute bottom-4 left-4 right-4">
              <h3 class="font-bold text-xl lg:text-2xl text-white leading-tight drop-shadow-lg">
                {project.data.title}
              </h3>
            </div>
          </div>

          <!-- Content Footer -->
          <div class="p-5 bg-white">
            <p class="text-gray-600 text-sm leading-relaxed line-clamp-2 mb-4">
              {project.data.description}
            </p>
            
            <div class="flex items-center justify-between">
              <span class="inline-flex items-center gap-2 text-brand-primary font-semibold text-sm group-hover:gap-3 transition-all duration-300">
                Ver proyecto
                <Icon name="ph:arrow-right" class="w-4 h-4" />
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>

  <!-- CTA Button -->
  <div class="text-center mt-12 px-6" data-aos="fade-up" data-aos-delay="300">
    <a 
      href="/todos-proyectos"
      class="inline-flex items-center gap-3 px-8 py-4 bg-white text-brand-secondary font-bold rounded-full shadow-xl hover:shadow-2xl hover:scale-105 transition-all duration-300"
    >
      <span>Ver todos los proyectos</span>
      <Icon name="ph:arrow-right-bold" class="w-5 h-5" />
    </a>
  </div>
</section>

<style>
  .hide-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }
</style>

<script>
  function initPortfolioSlider() {
    const track = document.getElementById('portfolio-track');
    const prevBtn = document.getElementById('portfolio-prev');
    const nextBtn = document.getElementById('portfolio-next');
    
    if (!track || !prevBtn || !nextBtn) return;

    const cardWidth = 420; // Card width + gap

    prevBtn.addEventListener('click', () => {
      track.scrollBy({ left: -cardWidth, behavior: 'smooth' });
    });

    nextBtn.addEventListener('click', () => {
      track.scrollBy({ left: cardWidth, behavior: 'smooth' });
    });

    // Auto scroll every 4 seconds
    let autoScroll = setInterval(() => {
      const maxScroll = track.scrollWidth - track.clientWidth;
      if (track.scrollLeft >= maxScroll - 10) {
        track.scrollTo({ left: 0, behavior: 'smooth' });
      } else {
        track.scrollBy({ left: cardWidth, behavior: 'smooth' });
      }
    }, 4000);

    // Pause on hover
    track.addEventListener('mouseenter', () => clearInterval(autoScroll));
    track.addEventListener('mouseleave', () => {
      autoScroll = setInterval(() => {
        const maxScroll = track.scrollWidth - track.clientWidth;
        if (track.scrollLeft >= maxScroll - 10) {
          track.scrollTo({ left: 0, behavior: 'smooth' });
        } else {
          track.scrollBy({ left: cardWidth, behavior: 'smooth' });
        }
      }, 4000);
    });
  }

  // Initialize
  document.addEventListener('DOMContentLoaded', initPortfolioSlider);
  document.addEventListener('astro:page-load', initPortfolioSlider);
</script>

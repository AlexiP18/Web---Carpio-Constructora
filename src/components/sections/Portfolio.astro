---
import { Icon } from 'astro-icon/components';

// Asset constants from Figma
const imgPlaceholderImage = "http://localhost:3845/assets/b7b4e314cc3eb923b7fa8aac8183d1866fe76120.png";
---

<section class="bg-neutral-lighter px-5 py-16 lg:px-16 lg:py-28 w-full">
  <div class="max-w-container-large mx-auto">
    <!-- Section Title -->
    <div 
      class="text-center mb-12 lg:mb-20"
      data-aos="fade-up"
    >
      <div class="mb-2">
        <div class="font-heebo font-semibold text-text-small text-neutral-darkest">
          Construcción
        </div>
      </div>
      <div class="space-y-4 lg:space-y-6">
        <h2 class="font-urbanist font-medium text-heading-3 lg:text-heading-2 text-neutral-darkest">
          Calidad en cada proyecto
        </h2>
        <p class="font-heebo font-normal text-text-regular lg:text-text-medium text-neutral-darkest">
          Transformamos tus ideas en realidades constructivas.
        </p>
      </div>
    </div>
    
    <!-- Projects Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-8">
      <!-- Project Card 1 -->
      <div 
        class="bg-neutral-lighter rounded-medium border-2 border-neutral-darkest hover:shadow-xl transition-all duration-300 group"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        <div class="overflow-hidden rounded-t-medium">
          <div 
            class="h-48 lg:h-[233px] bg-center bg-cover bg-no-repeat w-full group-hover:scale-105 transition-transform duration-500" 
            style={{ backgroundImage: `url('${imgPlaceholderImage}')` }}
          />
        </div>
        <div class="p-6 lg:p-8 space-y-6">
          <div class="space-y-2">
            <div class="font-heebo font-semibold text-text-small text-neutral-darkest">
              Innovación
            </div>
            <div class="space-y-4">
              <h3 class="font-urbanist font-medium text-heading-5 lg:text-heading-4 text-neutral-darkest">
                AURORA
              </h3>
              <p class="font-heebo font-normal text-text-small lg:text-text-regular text-neutral-darkest">
                Compromiso con la excelencia y la satisfacción del cliente.
              </p>
            </div>
          </div>
          <div>
            <a 
              href="/proyectos/aurora"
              class="inline-flex items-center gap-2 hover:text-forest-green transition-colors group"
            >
              <span class="font-heebo font-medium text-text-regular text-neutral-darkest group-hover:text-forest-green">
                Descubre
              </span>
              <Icon name="ph:arrow-right" class="w-4 h-4" />
            </a>
          </div>
        </div>
      </div>
      
      <!-- Project Card 2 -->
      <div 
        class="bg-neutral-lighter rounded-medium border-2 border-neutral-darkest hover:shadow-xl transition-all duration-300 group"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        <div class="overflow-hidden rounded-t-medium">
          <div 
            class="h-48 lg:h-[233px] bg-center bg-cover bg-no-repeat w-full group-hover:scale-105 transition-transform duration-500" 
            style={{ backgroundImage: `url('${imgPlaceholderImage}')` }}
          />
        </div>
        <div class="p-6 lg:p-8 space-y-6">
          <div class="space-y-2">
            <div class="font-heebo font-semibold text-text-small text-neutral-darkest">
              Eficiencia
            </div>
            <div class="space-y-4">
              <h3 class="font-urbanist font-medium text-heading-5 lg:text-heading-4 text-neutral-darkest">
                GRAND BAY
              </h3>
              <p class="font-heebo font-normal text-text-small lg:text-text-regular text-neutral-darkest">
                Soluciones personalizadas para cada necesidad constructiva.
              </p>
            </div>
          </div>
          <div>
            <a 
              href="/proyectos/grand-bay"
              class="inline-flex items-center gap-2 hover:text-forest-green transition-colors group"
            >
              <span class="font-heebo font-medium text-text-regular text-neutral-darkest group-hover:text-forest-green">
                Explora
              </span>
              <Icon name="ph:arrow-right" class="w-4 h-4" />
            </a>
          </div>
        </div>
      </div>
      
      <!-- Project Card 3 -->
      <div 
        class="bg-neutral-lighter rounded-medium border-2 border-neutral-darkest hover:shadow-xl transition-all duration-300 group"
        data-aos="fade-up"
        data-aos-delay="300"
      >
        <div class="overflow-hidden rounded-t-medium">
          <div 
            class="h-48 lg:h-[233px] bg-center bg-cover bg-no-repeat w-full group-hover:scale-105 transition-transform duration-500" 
            style={{ backgroundImage: `url('${imgPlaceholderImage}')` }}
          />
        </div>
        <div class="p-6 lg:p-8 space-y-6">
          <div class="space-y-2">
            <div class="font-heebo font-semibold text-text-small text-neutral-darkest">
              Compromiso
            </div>
            <div class="space-y-4">
              <h3 class="font-urbanist font-medium text-heading-5 lg:text-heading-4 text-neutral-darkest">
                ÁGORA
              </h3>
              <p class="font-heebo font-normal text-text-small lg:text-text-regular text-neutral-darkest">
                Tu satisfacción es nuestra prioridad en cada proyecto.
              </p>
            </div>
          </div>
          <div>
            <a 
              href="/contacto"
              class="inline-flex items-center gap-2 hover:text-forest-green transition-colors group"
            >
              <span class="font-heebo font-medium text-text-regular text-neutral-darkest group-hover:text-forest-green">
                Contáctanos
              </span>
              <Icon name="ph:arrow-right" class="w-4 h-4" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

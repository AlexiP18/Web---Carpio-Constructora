---
import { Icon } from "astro-icon/components";
import Button from "../../ui/Button.astro";
import CubixBlackBg from "../../ui/CubixBlackBg.astro";

export interface Props {
  title: string;
  description: string;
  primaryButtonText: string;
  primaryButtonHref: string;
  secondaryButtonText?: string;
  secondaryButtonHref?: string;
  backgroundImage?: string;
}

const {
  title,
  description,
  primaryButtonText,
  primaryButtonHref,
  secondaryButtonText,
  secondaryButtonHref,
  backgroundImage = "/images/placeholder-image.jpg",
} = Astro.props;
---

<section class="relative py-24 bg-brand-primary overflow-hidden" id="cta">
  <!-- SVG Background -->
  <!-- Background Component -->
  <div
    class="absolute inset-0 w-full h-full opacity-30 mix-blend-normal pointer-events-none"
  >
    <CubixBlackBg />
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <!-- Header Section -->
    <div class="text-center max-w-3xl mx-auto mb-16" data-aos="fade-up">
      <div
        class="inline-flex items-center gap-2 bg-brand-secondary/20 backdrop-blur-sm border border-brand-secondary/40 rounded-full px-4 py-2 mb-6"
      >
        <Icon name="ph:rocket-launch" class="w-5 h-5 text-brand-secondary" />
        <span class="text-white font-semibold text-sm tracking-wide"
          >COMIENZA HOY</span
        >
      </div>

      <h2 class="text-4xl lg:text-5xl font-bold text-white leading-tight mb-6">
        {title}
      </h2>

      <p class="text-xl text-white/80 leading-relaxed">
        {description}
      </p>
    </div>

    <!-- Features Grid -->
    <div
      class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12"
      data-aos="fade-up"
      data-aos-delay="100"
    >
      <div
        class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-brand-secondary/50 transition-all duration-300 group"
      >
        <div
          class="w-14 h-14 bg-gradient-to-br from-brand-secondary to-yellow-500 rounded-xl flex items-center justify-center mb-4 shadow-lg shadow-brand-secondary/30 group-hover:scale-110 transition-transform duration-300"
        >
          <Icon name="ph:clock" class="w-7 h-7 text-white" />
        </div>
        <h3 class="text-white font-bold text-lg mb-2">Puntualidad</h3>
        <p class="text-white/70 text-sm">Garantizada en cada entrega</p>
      </div>

      <div
        class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-brand-primary/50 transition-all duration-300 group"
      >
        <div
          class="w-14 h-14 bg-gradient-to-br from-brand-primary to-cyan-600 rounded-xl flex items-center justify-center mb-4 shadow-lg shadow-brand-primary/30 group-hover:scale-110 transition-transform duration-300"
        >
          <Icon name="ph:shield-check" class="w-7 h-7 text-white" />
        </div>
        <h3 class="text-white font-bold text-lg mb-2">Calidad Certificada</h3>
        <p class="text-white/70 text-sm">Estándares de excelencia</p>
      </div>

      <div
        class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-brand-secondary/50 transition-all duration-300 group"
      >
        <div
          class="w-14 h-14 bg-gradient-to-br from-brand-secondary to-yellow-500 rounded-xl flex items-center justify-center mb-4 shadow-lg shadow-brand-secondary/30 group-hover:scale-110 transition-transform duration-300"
        >
          <Icon name="ph:currency-dollar" class="w-7 h-7 text-white" />
        </div>
        <h3 class="text-white font-bold text-lg mb-2">Asesoría Gratuita</h3>
        <p class="text-white/70 text-sm">Sin compromiso alguno</p>
      </div>

      <div
        class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:bg-white/10 hover:border-brand-primary/50 transition-all duration-300 group"
      >
        <div
          class="w-14 h-14 bg-gradient-to-br from-brand-primary to-cyan-600 rounded-xl flex items-center justify-center mb-4 shadow-lg shadow-brand-primary/30 group-hover:scale-110 transition-transform duration-300"
        >
          <Icon name="ph:users" class="w-7 h-7 text-white" />
        </div>
        <h3 class="text-white font-bold text-lg mb-2">
          Atención Personalizada
        </h3>
        <p class="text-white/70 text-sm">Expertos dedicados a ti</p>
      </div>
    </div>

    <!-- CTA Actions -->
    <div
      class="bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-xl border border-white/20 rounded-3xl p-8 lg:p-10"
      data-aos="fade-up"
      data-aos-delay="200"
    >
      <div class="flex flex-col lg:flex-row items-center justify-between gap-8">
        <!-- Left side - Info -->
        <div class="flex-1 text-center lg:text-left">
          <h3 class="text-2xl lg:text-3xl font-bold text-white mb-3">
            ¿Listo para comenzar?
          </h3>
          <p class="text-white/80 text-lg mb-6 lg:mb-0">
            Obtén una cotización personalizada en menos de 24 horas
          </p>

          <!-- Trust badges -->
          <div
            class="flex flex-wrap gap-4 justify-center lg:justify-start mt-4"
          >
            <div class="flex items-center gap-2">
              <div
                class="w-8 h-8 bg-gradient-to-br from-brand-secondary to-yellow-500 rounded-lg flex items-center justify-center"
              >
                <Icon name="ph:check" class="w-5 h-5 text-white" />
              </div>
              <span class="text-white/90 text-sm font-medium">8+ años</span>
            </div>
            <div class="flex items-center gap-2">
              <div
                class="w-8 h-8 bg-gradient-to-br from-brand-primary to-cyan-600 rounded-lg flex items-center justify-center"
              >
                <Icon name="ph:heart" class="w-5 h-5 text-white" />
              </div>
              <span class="text-white/90 text-sm font-medium"
                >100% Satisfacción</span
              >
            </div>
          </div>
        </div>

        <!-- Right side - Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 w-full lg:w-auto">
          <Button
            variant="primary"
            size="lg"
            iconPosition="left"
            icon="ph:whatsapp-logo-fill"
            animation="hover"
            href={primaryButtonHref}
            target="_blank"
            class="bg-[#25D366] border-2 border-[#25D366] text-white font-bold shadow-none hover:bg-transparent hover:border-white"
          >
            {primaryButtonText}
          </Button>
        </div>
      </div>
    </div>
  </div>
</section>

---
import { Icon } from "astro-icon/components";
import Button from '../../ui/Button.astro';

export interface Props {
  title: string;
  description: string;
  primaryButtonText: string;
  primaryButtonHref: string;
  secondaryButtonText?: string;
  secondaryButtonHref?: string;
  backgroundImage?: string;
}

const { 
  title, 
  description, 
  primaryButtonText, 
  primaryButtonHref,
  secondaryButtonText,
  secondaryButtonHref,
  backgroundImage = "/images/placeholder-image.jpg"
} = Astro.props;
---

<section class="py-20 bg-gradient-to-br from-gray-50 via-white to-gray-50 relative overflow-hidden" id="cta">
  <!-- Decorative background elements -->
  <div class="absolute top-0 left-0 w-72 h-72 bg-brand-primary/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-brand-secondary/5 rounded-full blur-3xl"></div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <!-- Main CTA Card -->
    <div class="bg-gradient-to-r from-slate-900 to-slate-800 rounded-3xl shadow-2xl relative overflow-hidden" data-aos="fade-up">
      <!-- Background Image with Overlay -->
      <div class="absolute inset-0">
        <img 
          src={backgroundImage} 
          alt="Background CTA"
          class="w-full h-full object-cover opacity-10"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-slate-900/95 to-slate-800/95"></div>
        <!-- Decorative elements -->
        <div class="absolute top-0 right-0 w-40 h-40 bg-brand-primary/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-32 h-32 bg-brand-secondary/10 rounded-full blur-2xl"></div>
      </div>

      <div class="relative z-10 p-8 lg:p-16">
        <div class="text-center space-y-8">
          <!-- Header -->
          <div class="space-y-6" data-aos="fade-up" data-aos-delay="100">
            <div class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm border border-white/30 rounded-full px-4 py-2">
              <Icon name="ph:heart" class="w-5 h-5 text-white" />
              <span class="text-white font-semibold text-sm">¡Es el momento!</span>
            </div>
            
            <h2 class="text-4xl lg:text-6xl font-bold text-white leading-tight max-w-4xl mx-auto">
              {title}
            </h2>
            
            <p class="text-xl text-gray-300 leading-relaxed max-w-3xl mx-auto">
              {description}
            </p>
          </div>

          <!-- Features Grid -->
          <div class="grid lg:grid-cols-3 gap-6 max-w-5xl mx-auto" data-aos="fade-up" data-aos-delay="200">
            <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 text-center hover:bg-white/15 transition-all duration-300">
              <div class="w-16 h-16 bg-gradient-to-br from-brand-secondary to-brand-secondary-dark rounded-2xl flex items-center justify-center mx-auto mb-4">
                <Icon name="ph:clock" class="w-8 h-8 text-white" />
              </div>
              <div class="text-white font-bold text-lg mb-2">Respuesta Rápida</div>
              <div class="text-gray-300 text-sm">En menos de 24 horas</div>
            </div>
            
            <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 text-center hover:bg-white/15 transition-all duration-300">
              <div class="w-16 h-16 bg-gradient-to-br from-brand-primary to-brand-primary-dark rounded-2xl flex items-center justify-center mx-auto mb-4">
                <Icon name="ph:currency-dollar" class="w-8 h-8 text-white" />
              </div>
              <div class="text-white font-bold text-lg mb-2">Asesoría Gratuita</div>
              <div class="text-gray-300 text-sm">Sin compromiso</div>
            </div>
            
            <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 text-center hover:bg-white/15 transition-all duration-300">
              <div class="w-16 h-16 bg-brand-primary rounded-2xl flex items-center justify-center mx-auto mb-4">
                <Icon name="ph:users" class="w-8 h-8 text-white" />
              </div>
              <div class="text-white font-bold text-lg mb-2">Asesoría Personalizada</div>
              <div class="text-gray-300 text-sm">Expertos dedicados</div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 items-center justify-center max-w-md mx-auto" data-aos="fade-up" data-aos-delay="300">
            <Button 
              variant="primary"
              size="lg"
              iconPosition="left"
              icon="ph:phone"
              animation="hover"
              href={primaryButtonHref}
              class="w-full sm:w-auto"
            >
              {primaryButtonText}
            </Button>
            
            {secondaryButtonText && secondaryButtonHref && (
              <Button 
                variant="outline"
                size="lg"
                iconPosition="left"
                icon="ph:info"
                animation="hover"
                href={secondaryButtonHref}
                class="w-full sm:w-auto bg-transparent border-2 border-white text-white hover:bg-white hover:text-gray-900"
              >
                {secondaryButtonText}
              </Button>
            )}
          </div>

          <!-- Trust Indicators -->
          <div class="pt-8 border-t border-white/20" data-aos="fade-up" data-aos-delay="400">
            <div class="flex flex-col sm:flex-row items-center justify-center gap-8 text-gray-300">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-gradient-to-br from-brand-primary to-brand-primary-dark rounded-xl flex items-center justify-center">
                  <Icon name="ph:shield-check" class="w-5 h-5 text-white" />
                </div>
                <span class="font-semibold">8+ años de experiencia</span>
              </div>
              
              <!-- <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-gradient-to-br from-brand-secondary to-brand-secondary-dark rounded-xl flex items-center justify-center">
                  <Icon name="ph:star" class="w-5 h-5 text-white" />
                </div>
                <span class="font-semibold">150+ proyectos exitosos</span>
              </div> -->
              
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-brand-primary rounded-xl flex items-center justify-center">
                  <Icon name="ph:users" class="w-5 h-5 text-white" />
                </div>
                <span class="font-semibold">Clientes satisfechos</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

---
// Componente simplificado sin dependencias externas

export interface Props {
  title: string;
  description: string;
  primaryButtonText: string;
  primaryButtonHref: string;
  secondaryButtonText?: string;
  secondaryButtonHref?: string;
  backgroundImage?: string;
}

const { 
  title, 
  description, 
  primaryButtonText, 
  primaryButtonHref,
  secondaryButtonText,
  secondaryButtonHref,
  backgroundImage = "/images/placeholder-image.jpg"
} = Astro.props;
---

<section class="py-16 lg:py-24 bg-gray-600 relative" id="cta">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <img 
      src={backgroundImage} 
      alt="Background CTA"
      class="w-full h-full object-cover opacity-10"
    />
    <div class="absolute inset-0 bg-gray-600/90"></div>
  </div>

  <div class="max-w-6xl mx-auto px-6 relative z-10">
    <div class="text-center space-y-8">
      <!-- Header -->
      <div class="space-y-6">
        <div class="inline-flex items-center gap-2 bg-white/20 rounded-full px-4 py-2">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"/>
          </svg>
          <span class="text-white font-semibold text-sm">¡Es el momento!</span>
        </div>
        
        <h2 class="text-3xl lg:text-4xl font-bold text-white leading-tight max-w-4xl mx-auto">
          {title}
        </h2>
        
        <p class="text-lg text-white/80 leading-relaxed max-w-3xl mx-auto">
          {description}
        </p>
      </div>

      <!-- Features Grid -->
      <div class="grid lg:grid-cols-3 gap-6 max-w-4xl mx-auto my-12">
        <div class="bg-gray-700 border border-gray-600 rounded-lg p-6 text-center">
          <svg class="w-8 h-8 text-green-600 mx-auto mb-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
          </svg>
          <div class="text-white font-semibold mb-1">Respuesta Rápida</div>
          <div class="text-white/60 text-sm">En menos de 24 horas</div>
        </div>
        
        <div class="bg-gray-700 border border-gray-600 rounded-lg p-6 text-center">
          <svg class="w-8 h-8 text-green-600 mx-auto mb-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
          </svg>
          <div class="text-white font-semibold mb-1">Cotización Gratuita</div>
          <div class="text-white/60 text-sm">Sin compromiso</div>
        </div>
        
        <div class="bg-gray-700 border border-gray-600 rounded-lg p-6 text-center">
          <svg class="w-8 h-8 text-green-600 mx-auto mb-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
            <path d="M6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
          </svg>
          <div class="text-white font-semibold mb-1">Asesoría Personalizada</div>
          <div class="text-white/60 text-sm">Expertos dedicados</div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 items-center justify-center max-w-md mx-auto">
        <a href={primaryButtonHref} class="w-full sm:w-auto bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-medium transition-colors duration-200 flex items-center justify-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
          </svg>
          {primaryButtonText}
        </a>
        
        {secondaryButtonText && secondaryButtonHref && (
          <a href={secondaryButtonHref} class="w-full sm:w-auto border border-white/30 text-white hover:bg-white/10 px-6 py-3 rounded-lg font-medium transition-colors duration-200 flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            {secondaryButtonText}
          </a>
        )}
      </div>

      <!-- Trust Indicators -->
      <div class="pt-8 border-t border-white/20">
        <div class="flex flex-col sm:flex-row items-center justify-center gap-8 text-white/70">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm">15+ años de experiencia</span>
          </div>
          
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            <span class="text-sm">150+ proyectos exitosos</span>
          </div>
          
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
              <path d="M6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
            </svg>
            <span class="text-sm">Clientes satisfechos</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

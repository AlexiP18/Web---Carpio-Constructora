---
// Componente simplificado sin dependencias externas

export interface Props {
  tagline: string;
  title: string;
  description: string;
  steps: Array<{
    number: string;
    title: string;
    description: string;
    icon?: string;
  }>;
}

const { tagline, title, description, steps } = Astro.props;
---

<section class="py-16 lg:py-24 bg-gray-600" id="process">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-12">
      <div class="inline-flex items-center gap-2 bg-white/20 rounded-full px-4 py-2 mb-6">
        <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
        <span class="text-white font-medium text-sm uppercase tracking-wider">{tagline}</span>
      </div>
      
      <h2 class="text-3xl lg:text-4xl font-bold text-white leading-tight mb-4">
        {title}
      </h2>
      
      <p class="text-lg text-white/80 leading-relaxed">
        {description}
      </p>
    </div>

    <!-- Process Steps -->
    <div class="grid lg:grid-cols-3 gap-8 mb-12">
      {steps.map((step, index) => (
        <div class="relative group">
          <!-- Connection Line (hidden on mobile) -->
          {index < steps.length - 1 && (
            <div class="hidden lg:block absolute top-12 -right-4 w-8 h-px bg-white/30 z-10"></div>
          )}
          
          <!-- Step Card -->
          <div class="bg-gray-700 rounded-lg p-6 border border-gray-600 hover:border-green-500 transition-all duration-300 h-full">
            <div class="space-y-4">
              <!-- Step Number -->
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-green-600 rounded-lg flex items-center justify-center text-white font-bold text-lg">
                  {step.number}
                </div>
                {step.icon && (
                  <div class="w-10 h-10 bg-gray-600 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                )}
              </div>
              
              <!-- Content -->
              <div class="space-y-3">
                <h3 class="text-xl font-bold text-white">
                  {step.title}
                </h3>
                <p class="text-white/70 leading-relaxed">
                  {step.description}
                </p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Bottom Section -->
    <div class="bg-gray-700 rounded-lg p-8 lg:p-10 border border-gray-600">
      <div class="grid lg:grid-cols-2 gap-8 items-center">
        <!-- Left Content -->
        <div class="space-y-6">
          <h3 class="text-2xl lg:text-3xl font-bold text-white">
            ¿Listo para comenzar tu proyecto?
          </h3>
          <p class="text-white/70 leading-relaxed">
            Nuestro proceso está diseñado para asegurar la máxima calidad y tu completa satisfacción 
            en cada etapa del proyecto.
          </p>
          
          <!-- Process Highlights -->
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-gray-600 rounded-lg p-4 text-center border border-gray-500">
              <svg class="w-8 h-8 text-green-600 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
              <div class="text-white font-semibold">Puntualidad</div>
              <div class="text-white/60 text-sm">Garantizada</div>
            </div>
            <div class="bg-gray-600 rounded-lg p-4 text-center border border-gray-500">
              <svg class="w-8 h-8 text-green-600 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div class="text-white font-semibold">Calidad</div>
              <div class="text-white/60 text-sm">Certificada</div>
            </div>
          </div>
        </div>

        <!-- Right Actions -->
        <div class="text-center lg:text-right space-y-6">
          <div class="space-y-2">
            <div class="text-green-400 font-semibold">Proceso Transparente</div>
            <div class="text-white text-lg">Seguimiento en tiempo real</div>
          </div>
          
          <div class="flex flex-col sm:flex-row lg:flex-col gap-4 lg:items-end">
            <a href="/contacto" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-medium transition-colors duration-200 flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"/>
              </svg>
              Iniciar Proyecto
            </a>
            <a href="#testimonials" class="border border-white/30 text-white hover:bg-white/10 px-6 py-3 rounded-lg font-medium transition-colors duration-200 flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"/>
              </svg>
              Ver Testimonios
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

---
import { Icon } from "astro-icon/components";
import Button from '../../ui/Button.astro';
import BackgroundProcess from '../../ui/BackgroundProcess.astro';

export interface Props {
  tagline: string;
  title: string;
  description: string;
  steps: Array<{
    number: string;
    title: string;
    description: string;
    icon?: string;
  }>;
}

const { tagline, title, description, steps } = Astro.props;
---

<section class="py-20 bg-gradient-to-br from-gray-50 via-white to-gray-50 relative overflow-hidden" id="process">
  <!-- SVG Background -->
    <!-- Background Component -->
  <div class="absolute inset-0 w-full h-full opacity-30">
    <BackgroundProcess />
  </div>


  <!-- Decorative background elements -->
  <div class="absolute top-0 left-0 w-72 h-72 bg-brand-primary/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-brand-secondary/5 rounded-full blur-3xl"></div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <!-- Section Header -->
    <div class="text-center max-w-4xl mx-auto mb-16" data-aos="fade-up">
      <div class="inline-flex items-center gap-2 bg-brand-primary/10 backdrop-blur-sm border border-brand-primary/20 rounded-full px-4 py-2 mb-6">
        <Icon name="ph:flow-arrow" class="w-5 h-5 text-brand-primary" />
        <span class="text-brand-primary font-semibold text-sm uppercase tracking-wider">{tagline}</span>
      </div>
      
      <h2 class="text-4xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
        {title}
      </h2>
      
      <p class="text-xl text-gray-600 leading-relaxed">
        {description}
      </p>
    </div>

    <!-- Process Steps -->
    <div class="grid lg:grid-cols-3 gap-8 mb-16">
      {steps.map((step, index) => (
        <div class="relative group" data-aos="fade-up" data-aos-delay={index * 100}>
          <!-- Connection Line (hidden on mobile) -->
          {index < steps.length - 1 && (
            <div class="hidden lg:block absolute top-16 -right-4 w-8 h-0.5 bg-gradient-to-r from-brand-primary to-transparent z-10"></div>
          )}
          
          <!-- Step Card -->
          <div class="bg-white rounded-3xl shadow-2xl border border-gray-100 p-8 hover:shadow-3xl transition-all duration-500 h-full group-hover:scale-105">
            <div class="space-y-6">
              <!-- Step Number & Icon -->
              <div class="flex items-center gap-4">
                <div class="w-16 h-16 bg-gradient-to-br from-brand-primary to-brand-primary-dark rounded-2xl flex items-center justify-center text-white font-bold text-xl shadow-xl">
                  {step.number}
                </div>
                {step.icon && (
                  <div class="w-12 h-12 bg-gradient-to-br from-brand-secondary/20 to-brand-secondary/30 rounded-xl flex items-center justify-center border border-brand-secondary/30">
                    <Icon name={step.icon} class="w-6 h-6 text-brand-secondary" />
                  </div>
                )}
              </div>
              
              <!-- Content -->
              <div class="space-y-4">
                <h3 class="text-2xl font-bold text-gray-900 group-hover:text-brand-primary transition-colors duration-300">
                  {step.title}
                </h3>
                <p class="text-gray-600 leading-relaxed">
                  {step.description}
                </p>
              </div>

              <!-- Progress indicator -->
              <div class="flex items-center gap-2 pt-4 border-t border-gray-100">
                <div class="w-2 h-2 bg-brand-primary rounded-full"></div>
                <div class="text-sm text-gray-500 font-medium">Paso {step.number}</div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

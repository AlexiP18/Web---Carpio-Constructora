---
import { Icon } from "astro-icon/components";
import Button from '../../ui/Button.astro';

export interface Props {
  tagline: string;
  title: string;
  description: string;
  backgroundImage?: string;
}

const { tagline, title, description, backgroundImage = "/images/placeholder-image.png" } = Astro.props;
---

<section class="relative py-32 lg:py-40 bg-gradient-to-br from-gray-900 via-slate-800 to-gray-900 overflow-hidden">
  <!-- Background decorations -->
  <div class="absolute inset-0">
    <div class="absolute top-20 left-20 w-60 h-60 bg-primary-green/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-20 w-40 h-40 bg-emerald-500/10 rounded-full blur-2xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-blue-500/5 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="max-w-4xl text-left">
      <!-- Tagline -->
      <div class="inline-flex items-center gap-2 bg-primary-green/20 backdrop-blur-sm border border-primary-green/30 rounded-full px-4 py-2 mb-8" data-aos="fade-up">
        <Icon name="ph:buildings-fill" class="w-5 h-5 text-primary-green" />
        <span class="text-primary-green font-semibold text-sm uppercase tracking-wider">{tagline}</span>
      </div>
      
      <!-- Main Heading -->
      <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold text-white leading-tight mb-8" data-aos="fade-up" data-aos-delay="100">
        {title}
      </h1>
      
      <!-- Description -->
      <p class="text-xl lg:text-2xl text-white/90 leading-relaxed mb-12 max-w-3xl" data-aos="fade-up" data-aos-delay="200">
        {description}
      </p>
      
      <!-- Service highlights - Modern cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12" data-aos="fade-up" data-aos-delay="300">
        <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-3xl p-8 hover:bg-white/15 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl">
          <div class="flex items-center gap-6">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-green to-emerald-500 rounded-2xl flex items-center justify-center shadow-lg">
              <Icon name="ph:shield-check-fill" class="w-8 h-8 text-white" />
            </div>
            <div>
              <h3 class="text-xl font-bold text-white mb-2">Garantía Extendida</h3>
              <p class="text-white/70 leading-relaxed">Calidad asegurada en cada proyecto con respaldo total</p>
            </div>
          </div>
        </div>
        
        <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-3xl p-8 hover:bg-white/15 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl">
          <div class="flex items-center gap-6">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center shadow-lg">
              <Icon name="ph:clock-fill" class="w-8 h-8 text-white" />
            </div>
            <div>
              <h3 class="text-xl font-bold text-white mb-2">Entrega Puntual</h3>
              <p class="text-white/70 leading-relaxed">Cumplimos con los tiempos acordados sin excepciones</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4" data-aos="fade-up" data-aos-delay="400">
        <Button 
          variant="primary"
          size="lg"
          href="#features"
          icon="ph:arrow-down"
          class="shadow-lg hover:shadow-xl"
        >
          Explorar Servicio
        </Button>
        
        <Button 
          variant="outline-dark"
          size="lg"
          href="/contacto"
          icon="ph:phone-fill"
          class="shadow-lg hover:shadow-xl"
        >
          Solicitar Cotización
        </Button>
      </div>
    </div>
  </div>
</section>

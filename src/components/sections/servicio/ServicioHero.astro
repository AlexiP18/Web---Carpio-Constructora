---
import Button from '../../ui/Button.astro';

export interface Props {
  tagline: string;
  title: string;
  description: string;
  backgroundImage?: string;
}

const { tagline, title, description, backgroundImage = "/images/placeholder-image.png" } = Astro.props;
---

<section class="bg-gray-600 py-32 lg:py-40">
  <div class="max-w-4xl mx-auto px-6 text-left">
    <!-- Tagline -->
    <p class="text-sm font-medium text-white/80 uppercase tracking-wider mb-8">
      {tagline}
    </p>
    
    <!-- Main Heading -->
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold text-white leading-tight mb-8">
      {title}
    </h1>
    
    <!-- Description -->
    <p class="text-xl lg:text-2xl text-white/90 leading-relaxed mb-12 max-w-3xl">
      {description}
    </p>
    
    <!-- Service highlights - Simple grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
      <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-green-600 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-white mb-1">Garantía Extendida</h3>
            <p class="text-sm text-white/70">Calidad asegurada en cada proyecto</p>
          </div>
        </div>
      </div>
      
      <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-white mb-1">Entrega Puntual</h3>
            <p class="text-sm text-white/70">Cumplimos con los tiempos acordados</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4">
      <Button 
        variant="primary" 
        size="lg"
        href="#features"
        class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-full font-medium transition-colors"
      >
        Explorar Servicio
      </Button>
      <Button 
        variant="outline" 
        size="lg"
        href="/contacto"
        class="border-2 border-white text-white hover:bg-white hover:text-gray-600 px-8 py-4 rounded-full font-medium transition-all"
      >
        Solicitar Cotización
      </Button>
    </div>
  </div>
</section>

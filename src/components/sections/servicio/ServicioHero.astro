---
import { Icon } from "astro-icon/components";
import Button from '../../ui/Button.astro';

export interface HeroChip {
  title: string;
  description: string;
  icon: string;
  colorScheme?: 'primary' | 'secondary';
}

export interface HeroCtaButton {
  text?: string;
  whatsappNumber?: string;
  url?: string;
  actionType?: 'page' | 'whatsapp';
}

export interface HeroConfig {
  chips?: HeroChip[];
  ctaButton?: HeroCtaButton;
}

export interface Props {
  tagline: string;
  title: string;
  description: string;
  serviceType?: 'construccion' | 'remodelacion' | 'diseno-arquitectonico';
  heroConfig?: HeroConfig;
}

const { tagline, title, description, serviceType = 'construccion', heroConfig } = Astro.props;

// Select background image based on service type from public folder
const backgroundImages = {
  'construccion': '/images/services/construccion/construccion-hero.webp',
  'remodelacion': '/images/services/remodelacion/remodelacion-hero.webp',
  'diseno-arquitectonico': '/images/services/disenio_arquitectonico/diseno-hero.webp'
};

const backgroundImage = backgroundImages[serviceType];
---

<section class="relative pt-16 pb-20 lg:pt-20 lg:pb-24 bg-gradient-to-br from-gray-900 via-slate-800 to-gray-900 overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 w-full h-full">
    <img 
      src={backgroundImage} 
      alt={`${title} Hero Background`}
      class="w-full h-full object-cover opacity-40"
    />
  </div>
  
  <!-- Background decorations -->
  <div class="absolute inset-0">
    <div class="absolute top-20 left-20 w-60 h-60 bg-brand-primary/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-20 w-40 h-40 bg-brand-secondary/15 rounded-full blur-2xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-brand-primary/5 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="max-w-4xl text-left">
      <!-- Main Heading -->
      <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold text-white leading-tight mb-8" data-aos="fade-up">
        {title}
      </h1>
      
      <!-- Description -->
      <p class="text-lg lg:text-xl text-white/90 leading-relaxed mb-12 max-w-3xl" data-aos="fade-up" data-aos-delay="200">
        {description}
      </p>
      
      <!-- Service highlights - Modern cards (dynamic) -->
      {(heroConfig?.chips && heroConfig.chips.length > 0) ? (
        <div class={`grid gap-4 mb-12 ${heroConfig.chips.length === 1 ? 'grid-cols-1 max-w-md' : heroConfig.chips.length === 2 ? 'grid-cols-1 md:grid-cols-2' : heroConfig.chips.length === 3 ? 'grid-cols-1 md:grid-cols-3' : 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4'}`} data-aos="fade-up" data-aos-delay="300">
          {heroConfig.chips.map((chip) => {
            const colorScheme = chip.colorScheme || 'primary';
            const bgGradient = colorScheme === 'primary' 
              ? 'from-brand-primary to-brand-primary-dark' 
              : 'from-brand-secondary to-brand-secondary-dark';
            
            return (
              <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-3xl p-6 hover:bg-white/15 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl">
                <div class="flex items-center gap-4">
                  <div class={`w-14 h-14 bg-gradient-to-br ${bgGradient} rounded-2xl flex items-center justify-center shadow-lg flex-shrink-0`}>
                    <Icon name={chip.icon} class="w-7 h-7 text-white" />
                  </div>
                  <div>
                    <h3 class="text-lg font-bold text-white mb-1">{chip.title}</h3>
                    <p class="text-white/70 text-sm leading-relaxed">{chip.description}</p>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      ) : (
        <!-- Default chips if none configured -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-12" data-aos="fade-up" data-aos-delay="300">
          <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-3xl p-6 hover:bg-white/15 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl">
            <div class="flex items-center gap-4">
              <div class="w-14 h-14 bg-gradient-to-br from-brand-primary to-brand-primary-dark rounded-2xl flex items-center justify-center shadow-lg flex-shrink-0">
                <Icon name="ph:star-fill" class="w-7 h-7 text-white" />
              </div>
              <div>
                <h3 class="text-lg font-bold text-white mb-1">Calidad Premium</h3>
                <p class="text-white/70 text-sm leading-relaxed">Materiales de primera y acabados impecables</p>
              </div>
            </div>
          </div>
          
          <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-3xl p-6 hover:bg-white/15 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl">
            <div class="flex items-center gap-4">
              <div class="w-14 h-14 bg-gradient-to-br from-brand-secondary to-brand-secondary-dark rounded-2xl flex items-center justify-center shadow-lg flex-shrink-0">
                <Icon name="ph:users-fill" class="w-7 h-7 text-white" />
              </div>
              <div>
                <h3 class="text-lg font-bold text-white mb-1">Equipo Profesional</h3>
                <p class="text-white/70 text-sm leading-relaxed">Especialistas con a帽os de experiencia</p>
              </div>
            </div>
          </div>
        </div>
      )}
      
      <!-- CTA Button (dynamic) -->
      <div class="inline-block">
        <Button 
          variant="secondary"
          size="lg"
          href={(() => {
            const ctaConfig = heroConfig?.ctaButton;
            const whatsappNumber = ctaConfig?.whatsappNumber || '593998323304';
            
            // Si hay URL personalizada, usarla
            if (ctaConfig?.url) {
              return ctaConfig.url;
            }
            
            // Mapeo de tipos de servicio a nombres formateados
            const serviceNames = {
              'construccion': 'Construcci贸n Integral',
              'remodelacion': 'Remodelaci贸n',
              'diseno-arquitectonico': 'Dise帽o Arquitect贸nico'
            };
            
            const serviceName = serviceNames[serviceType] || title || 'sus servicios';
            const mensaje = `隆Hola Carpio Constructora! ぉ Me encantar铆a solicitar una cotizaci贸n para su servicio de ${serviceName}. Estoy interesad@ en conocer m谩s detalles sobre los costos y el proceso.`;
            
            return `https://wa.me/${whatsappNumber.replace(/\+/g, '')}?text=${encodeURIComponent(mensaje)}`;
          })()}
          icon="ph:whatsapp-logo-fill"
          class="shadow-xl hover:shadow-2xl"
        >
          {heroConfig?.ctaButton?.text || 'Solicitar Cotizaci贸n'}
        </Button>
      </div>
    </div>
  </div>
</section>

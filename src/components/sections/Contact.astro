---
import { Icon } from 'astro-icon/components';

// Asset constants from Figma
const contactImage = "http://localhost:3845/assets/b7b4e314cc3eb923b7fa8aac8183d1866fe76120.png";
---

<section class="bg-neutral-lighter px-5 py-16 lg:px-16 lg:py-28">
  <div class="max-w-container-large mx-auto">
    <!-- Section Header -->
    <div class="text-center lg:text-left mb-12 lg:mb-20" data-aos="fade-up">
      <p class="font-heebo font-semibold text-text-small text-neutral-darkest mb-2">
        Construcción
      </p>
      <h2 class="font-urbanist font-medium text-heading-3 lg:text-heading-2 text-neutral-darkest mb-4">
        Contáctanos
      </h2>
      <p class="font-heebo font-normal text-text-regular lg:text-text-large text-neutral-darkest">
        Estamos aquí para ayudarte con tu proyecto.
      </p>
    </div>
    
    <!-- Contact Content -->
    <div class="flex flex-col lg:grid lg:grid-cols-2 gap-10 lg:gap-20 items-start">
      <!-- Contact Information -->
      <div class="w-full space-y-8 lg:space-y-10">
        <!-- Email -->
        <div 
          class="flex gap-4 items-start"
          data-aos="fade-right"
          data-aos-delay="100"
        >
          <div class="flex items-center justify-center w-10 h-10 lg:w-12 lg:h-12 bg-forest-green rounded-full flex-shrink-0">
            <Icon name="ph:envelope" class="w-5 h-5 lg:w-6 lg:h-6 text-neutral-lightest" />
          </div>
          <div class="min-w-0 flex-1">
            <h3 class="font-urbanist font-medium text-heading-6 lg:text-heading-5 text-neutral-darkest">
              Correo
            </h3>
            <p class="font-heebo font-normal text-text-small lg:text-text-medium text-neutral-darkest mb-1">
              Escríbenos para más información.
            </p>
            <a 
              href="mailto:info@constructoracarpio.com" 
              class="font-heebo font-medium text-text-small lg:text-text-medium text-forest-green hover:text-forest-green/80 transition-colors duration-300 break-all"
            >
              info@constructoracarpio.com
            </a>
          </div>
        </div>
        
        <!-- Phone -->
        <div 
          class="flex gap-4 items-start"
          data-aos="fade-right"
          data-aos-delay="200"
        >
          <div class="flex items-center justify-center w-10 h-10 lg:w-12 lg:h-12 bg-forest-green rounded-full flex-shrink-0">
            <Icon name="ph:phone" class="w-5 h-5 lg:w-6 lg:h-6 text-neutral-lightest" />
          </div>
          <div class="min-w-0 flex-1">
            <h3 class="font-urbanist font-medium text-heading-6 lg:text-heading-5 text-neutral-darkest">
              Teléfono
            </h3>
            <p class="font-heebo font-normal text-text-small lg:text-text-medium text-neutral-darkest mb-1">
              Llámanos para más información.
            </p>
            <a 
              href="tel:+50625550000" 
              class="font-heebo font-medium text-text-small lg:text-text-medium text-forest-green hover:text-forest-green/80 transition-colors duration-300"
            >
              +506 2555-0000
            </a>
          </div>
        </div>
        
        <!-- Location -->
        <div 
          class="flex gap-4 items-start"
          data-aos="fade-right"
          data-aos-delay="300"
        >
          <div class="flex items-center justify-center w-10 h-10 lg:w-12 lg:h-12 bg-forest-green rounded-full flex-shrink-0">
            <Icon name="ph:map-pin" class="w-5 h-5 lg:w-6 lg:h-6 text-neutral-lightest" />
          </div>
          <div class="min-w-0 flex-1">
            <h3 class="font-urbanist font-medium text-heading-6 lg:text-heading-5 text-neutral-darkest">
              Oficina
            </h3>
            <p class="font-heebo font-normal text-text-small lg:text-text-medium text-neutral-darkest mb-3">
              San José, Costa Rica
            </p>
            <a 
              href="https://maps.google.com" 
              target="_blank"
              class="inline-flex items-center gap-2 text-forest-green font-heebo font-medium text-text-small lg:text-text-medium hover:text-forest-green/80 transition-colors duration-300 group"
            >
              Obtener Direcciones
              <Icon name="ph:arrow-right" class="w-4 h-4 lg:w-5 lg:h-5 group-hover:translate-x-1 transition-transform duration-300" />
            </a>
          </div>
        </div>
        
        <!-- CTA Button -->
        <div data-aos="fade-right" data-aos-delay="400" class="pt-4">
          <a 
            href="/contacto" 
            class="inline-flex items-center gap-2 lg:gap-3 bg-forest-green text-neutral-lightest px-6 py-3 lg:px-8 lg:py-4 rounded-full font-heebo font-medium text-text-regular lg:text-text-medium hover:bg-forest-green/90 transition-all duration-300 hover:shadow-lg w-full lg:w-auto justify-center"
          >
            Solicitar Cotización
            <Icon name="ph:arrow-right" class="w-4 h-4 lg:w-5 lg:h-5" />
          </a>
        </div>
      </div>
      
      <!-- Contact Image -->
      <div 
        class="w-full h-64 lg:h-[516px] rounded-large bg-cover bg-center shadow-lg order-first lg:order-last"
        style={`background-image: url('${contactImage}')`}
        data-aos="fade-left"
        data-aos-delay="200"
      />
    </div>
  </div>
</section>

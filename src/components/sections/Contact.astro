---
import { Icon } from 'astro-icon/components';
import Button from '../ui/Button.astro';
import SectionLayout from '../ui/SectionLayout.astro';
import SectionHeader from '../ui/SectionHeader.astro';

// Contact data
const contactInfo = {
  email: "info@constructoracarpio.com",
  phone: "+506 2555-0000",
  whatsapp: "+506 8888-0000",
  address: "San José, Costa Rica",
  mapUrl: "https://maps.google.com/search/constructora+san+jose+costa+rica",
  socialMedia: {
    facebook: "https://facebook.com/constructoracarpio",
    instagram: "https://instagram.com/constructoracarpio",
    linkedin: "https://linkedin.com/company/constructoracarpio"
  }
};
---

<SectionLayout background="white" paddingY="lg" paddingX="lg" maxWidth="xl">
  <SectionHeader 
    tagline="Contacto"
    title="Contáctanos"
    description="Estamos aquí para ayudarte a materializar tu proyecto de construcción. Conversemos sobre tus ideas y necesidades."
    align="center"
    data-aos="fade-up"
    data-aos-delay="100"
  />
  
  <div class="mt-12 lg:mt-16">
    <!-- Contact Methods Grid - Utilizando todo el espacio horizontal disponible -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8 mb-12">
      
      <!-- Email -->
      <div 
        class="group flex flex-col items-center text-center p-6 rounded-2xl bg-white border border-neutral-light hover:border-primary-green hover:shadow-lg transition-all duration-300"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-r from-primary-green to-primary-green-dark rounded-2xl mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
          <Icon name="ph:envelope-fill" class="w-8 h-8 text-white" />
        </div>
        <h3 class="font-urbanist font-semibold text-[18px] text-neutral-darkest mb-2">
          Correo Electrónico
        </h3>
        <p class="font-heebo text-[14px] text-neutral-darkest/70 mb-3">
          Escríbenos para consultas y cotizaciones
        </p>
        <a 
          href={`mailto:${contactInfo.email}`}
          class="font-heebo font-medium text-[14px] text-primary-green hover:text-primary-green-dark transition-colors duration-300 break-all"
          aria-label={`Enviar correo a ${contactInfo.email}`}
        >
          {contactInfo.email}
        </a>
      </div>
      
      <!-- Phone -->
      <div 
        class="group flex flex-col items-center text-center p-6 rounded-2xl bg-white border border-neutral-light hover:border-blue-500 hover:shadow-lg transition-all duration-300"
        data-aos="fade-up"
        data-aos-delay="300"
      >
        <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-2xl mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
          <Icon name="ph:phone-fill" class="w-8 h-8 text-white" />
        </div>
        <h3 class="font-urbanist font-semibold text-[18px] text-neutral-darkest mb-2">
          Teléfono
        </h3>
        <p class="font-heebo text-[14px] text-neutral-darkest/70 mb-3">
          Lunes a viernes 8:00 AM - 5:00 PM
        </p>
        <a 
          href={`tel:${contactInfo.phone.replace(/\s/g, '')}`}
          class="font-heebo font-medium text-[16px] text-primary-green hover:text-primary-green-dark transition-colors duration-300"
          aria-label={`Llamar al ${contactInfo.phone}`}
        >
          {contactInfo.phone}
        </a>
      </div>

      <!-- WhatsApp -->
      <div 
        class="group flex flex-col items-center text-center p-6 rounded-2xl bg-white border border-neutral-light hover:border-green-500 hover:shadow-lg transition-all duration-300"
        data-aos="fade-up"
        data-aos-delay="400"
      >
        <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-r from-green-500 to-green-600 rounded-2xl mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
          <Icon name="ph:whatsapp-logo-fill" class="w-8 h-8 text-white" />
        </div>
        <h3 class="font-urbanist font-semibold text-[18px] text-neutral-darkest mb-2">
          WhatsApp
        </h3>
        <p class="font-heebo text-[14px] text-neutral-darkest/70 mb-3">
          Chatea para respuesta rápida
        </p>
        <a 
          href={`https://wa.me/${contactInfo.whatsapp.replace(/[\s\-+]/g, '')}`}
          target="_blank"
          rel="noopener noreferrer"
          class="font-heebo font-medium text-[16px] text-green-600 hover:text-green-700 transition-colors duration-300"
          aria-label={`Enviar mensaje de WhatsApp a ${contactInfo.whatsapp}`}
        >
          {contactInfo.whatsapp}
        </a>
      </div>
      
      <!-- Location -->
      <div 
        class="group flex flex-col items-center text-center p-6 rounded-2xl bg-white border border-neutral-light hover:border-red-500 hover:shadow-lg transition-all duration-300"
        data-aos="fade-up"
        data-aos-delay="500"
      >
        <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-r from-red-500 to-red-600 rounded-2xl mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
          <Icon name="ph:map-pin-fill" class="w-8 h-8 text-white" />
        </div>
        <h3 class="font-urbanist font-semibold text-[18px] text-neutral-darkest mb-2">
          Ubicación
        </h3>
        <p class="font-heebo text-[14px] text-neutral-darkest/70 mb-3">
          {contactInfo.address}
        </p>
        <a 
          href={contactInfo.mapUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-primary-green font-heebo font-medium text-[14px] hover:text-primary-green-dark transition-colors duration-300 group"
          aria-label="Abrir ubicación en Google Maps"
        >
          Ver en Maps
          <Icon name="ph:arrow-square-out" class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" />
        </a>
      </div>
    </div>

    <!-- Enhanced Main CTA Section -->
    <div 
      class="text-center bg-gradient-to-br from-primary-green/10 via-primary-green/5 to-primary-green-dark/10 rounded-3xl p-10 lg:p-16 border-2 border-primary-green/20 hover:border-primary-green/30 transition-all duration-500 shadow-xl hover:shadow-2xl"
      data-aos="fade-up"
      data-aos-delay="600"
    >
      <div class="max-w-3xl mx-auto">
        <!-- Icon with enhanced design -->
        <div class="relative mb-8">
          <div class="w-24 h-24 bg-gradient-to-r from-primary-green to-primary-green-dark rounded-full flex items-center justify-center mx-auto shadow-2xl hover:scale-110 transition-transform duration-300">
            <Icon name="ph:buildings-fill" class="w-12 h-12 text-white" />
          </div>
          <!-- Decorative rings -->
          <div class="absolute inset-0 w-24 h-24 mx-auto rounded-full border-2 border-primary-green/30 animate-pulse"></div>
          <div class="absolute inset-0 w-32 h-32 mx-auto -mt-4 -ml-4 rounded-full border border-primary-green/20"></div>
        </div>
        
        <!-- Enhanced title -->
        <h2 class="font-urbanist font-bold text-[32px] lg:text-[40px] text-neutral-darkest mb-6 leading-tight">
          ¿Listo para construir tu <span class="text-primary-green">proyecto soñado</span>?
        </h2>
        
        <!-- Enhanced description -->
        <p class="font-heebo text-[18px] lg:text-[20px] text-neutral-darkest/80 mb-10 leading-relaxed">
          Contáctanos hoy mismo y recibe una <strong class="text-primary-green">cotización completamente gratuita</strong>. 
          Con más de 15 años de experiencia, transformamos tus ideas en realidad.
        </p>
        
        <!-- Enhanced stats section -->
        <div class="grid grid-cols-3 gap-6 mb-10 max-w-2xl mx-auto">
          <div class="text-center">
            <div class="w-12 h-12 bg-primary-green/10 rounded-2xl flex items-center justify-center mx-auto mb-3">
              <Icon name="ph:calendar-check-fill" class="w-6 h-6 text-primary-green" />
            </div>
            <p class="font-urbanist font-bold text-[24px] text-primary-green">15+</p>
            <p class="font-heebo text-[14px] text-neutral-darkest/70">Años de experiencia</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 bg-primary-green/10 rounded-2xl flex items-center justify-center mx-auto mb-3">
              <Icon name="ph:buildings-fill" class="w-6 h-6 text-primary-green" />
            </div>
            <p class="font-urbanist font-bold text-[24px] text-primary-green">100+</p>
            <p class="font-heebo text-[14px] text-neutral-darkest/70">Proyectos completados</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 bg-primary-green/10 rounded-2xl flex items-center justify-center mx-auto mb-3">
              <Icon name="ph:clock-fill" class="w-6 h-6 text-primary-green" />
            </div>
            <p class="font-urbanist font-bold text-[24px] text-primary-green">24h</p>
            <p class="font-heebo text-[14px] text-neutral-darkest/70">Tiempo de respuesta</p>
          </div>
        </div>
        
        <!-- Enhanced CTA button -->
        <div class="space-y-4">
          <Button 
            href="/contacto" 
            variant="success" 
            size="lg"
            icon="ph:calendar-check-fill"
            iconPosition="left"
            data-aos="zoom-in"
            data-aos-delay="700"
          >
            Solicitar Cotización Gratuita
          </Button>
          
          <!-- Additional info -->
          <div class="flex items-center justify-center gap-2 text-neutral-darkest/60">
            <Icon name="ph:shield-check-fill" class="w-5 h-5 text-primary-green" />
            <span class="font-heebo text-[14px]">Sin compromiso • Respuesta en 24 horas</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Enhanced Social Media Section -->
    <div 
      class="mt-16 bg-gradient-to-r from-neutral-50 to-primary-green/5 rounded-3xl p-8 lg:p-12 text-center border border-neutral-light/50"
      data-aos="fade-up"
      data-aos-delay="700"
    >
      <div class="max-w-lg mx-auto">
        <div class="w-16 h-16 bg-gradient-to-r from-primary-green to-primary-green-dark rounded-full flex items-center justify-center mx-auto mb-6 shadow-xl">
          <Icon name="ph:share-network-fill" class="w-8 h-8 text-white" />
        </div>
        
        <h3 class="font-urbanist font-bold text-[24px] lg:text-[28px] text-neutral-darkest mb-3">
          Conecta con nosotros
        </h3>
        <p class="font-heebo text-[16px] text-neutral-darkest/70 mb-8">
          Síguenos en nuestras redes sociales para ver nuestros últimos proyectos y actualizaciones
        </p>
        
        <div class="flex gap-6 justify-center mb-6">
          <a 
            href={contactInfo.socialMedia.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="group relative flex flex-col items-center"
            aria-label="Seguir en Facebook"
          >
            <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-r from-blue-600 to-blue-700 rounded-2xl hover:from-blue-700 hover:to-blue-800 transition-all duration-300 hover:scale-110 transform shadow-lg group-hover:shadow-2xl">
              <Icon name="ph:facebook-logo-fill" class="w-8 h-8 text-white" />
            </div>
            <span class="font-heebo text-[12px] text-neutral-darkest/60 mt-2 group-hover:text-blue-600 transition-colors duration-300">
              Facebook
            </span>
          </a>
          
          <a 
            href={contactInfo.socialMedia.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="group relative flex flex-col items-center"
            aria-label="Seguir en Instagram"
          >
            <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500 rounded-2xl hover:from-pink-600 hover:via-purple-600 hover:to-indigo-600 transition-all duration-300 hover:scale-110 transform shadow-lg group-hover:shadow-2xl">
              <Icon name="ph:instagram-logo-fill" class="w-8 h-8 text-white" />
            </div>
            <span class="font-heebo text-[12px] text-neutral-darkest/60 mt-2 group-hover:text-pink-500 transition-colors duration-300">
              Instagram
            </span>
          </a>
          
          <a 
            href={contactInfo.socialMedia.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="group relative flex flex-col items-center"
            aria-label="Seguir en LinkedIn"
          >
            <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-r from-blue-700 to-blue-800 rounded-2xl hover:from-blue-800 hover:to-blue-900 transition-all duration-300 hover:scale-110 transform shadow-lg group-hover:shadow-2xl">
              <Icon name="ph:linkedin-logo-fill" class="w-8 h-8 text-white" />
            </div>
            <span class="font-heebo text-[12px] text-neutral-darkest/60 mt-2 group-hover:text-blue-700 transition-colors duration-300">
              LinkedIn
            </span>
          </a>
        </div>
        
        <div class="flex items-center justify-center gap-2 text-neutral-darkest/50">
          <Icon name="ph:heart-fill" class="w-4 h-4 text-primary-green" />
          <span class="font-heebo text-[14px]">¡Síguenos para inspirarte!</span>
          <Icon name="ph:heart-fill" class="w-4 h-4 text-primary-green" />
        </div>
      </div>
    </div>
  </div>
</SectionLayout>

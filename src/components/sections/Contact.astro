---
// Contact data basado en la imagen de referencia
const contactInfo = {
  email: "info@constructoraejemplo.com",
  phone: "+1 (555) 000-0000", 
  address: "123 Calle Ejemplo, Sydney NSW 2000 AU"
};
---

<section class="bg-gray-100 py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header similar a la imagen -->
    <div class="text-left mb-16">
      <p class="text-sm font-medium text-gray-600 uppercase tracking-wider mb-4">
        Construcción
      </p>
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        Contáctanos
      </h1>
      <p class="text-lg text-gray-600 max-w-xl">
        Estamos aquí para ayudarte con tu proyecto.
      </p>
    </div>

    <!-- Grid de dos columnas como en la imagen -->
    <div class="grid lg:grid-cols-2 gap-16 items-start">
      
      <!-- Columna izquierda - Información de contacto -->
      <div class="space-y-12">
        
        <!-- Correo -->
        <div>
          <div class="flex items-center mb-4">
            <svg class="w-6 h-6 text-gray-900 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
            <h3 class="text-xl font-semibold text-gray-900">Correo</h3>
          </div>
          <a 
            href={`mailto:${contactInfo.email}`}
            class="text-gray-600 hover:text-gray-900 underline transition-colors"
          >
            {contactInfo.email}
          </a>
          <br>
          <a 
            href={`mailto:${contactInfo.email}`}
            class="text-gray-600 hover:text-gray-900 underline transition-colors"
          >
            {contactInfo.email}
          </a>
        </div>

        <!-- Teléfono -->
        <div>
          <div class="flex items-center mb-4">
            <svg class="w-6 h-6 text-gray-900 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
            <h3 class="text-xl font-semibold text-gray-900">Teléfono</h3>
          </div>
          <p class="text-gray-600 mb-2">Llámanos para más información.</p>
          <a 
            href={`tel:${contactInfo.phone.replace(/[\s\-\(\)]/g, '')}`}
            class="text-gray-900 font-medium text-lg hover:text-gray-700 transition-colors"
          >
            {contactInfo.phone}
          </a>
        </div>

        <!-- Oficina -->
        <div>
          <div class="flex items-center mb-4">
            <svg class="w-6 h-6 text-gray-900 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
            <h3 class="text-xl font-semibold text-gray-900">Oficina</h3>
          </div>
          <p class="text-gray-600 mb-3">{contactInfo.address}</p>
          <button 
            class="inline-flex items-center text-gray-900 hover:text-gray-700 font-medium transition-colors group"
            onclick="window.open('https://maps.google.com/search/constructora+sydney+australia', '_blank')"
          >
            Obtener Direcciones
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </button>
        </div>

      </div>

      <!-- Columna derecha - Mapa o imagen -->
      <div class="bg-gray-300 rounded-lg aspect-square lg:aspect-auto lg:h-96 flex items-center justify-center">
        <!-- Placeholder para el mapa como en la imagen -->
        <div class="text-center text-gray-500">
          <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
          </svg>
          <p class="text-lg font-medium">Ubicación del Mapa</p>
          <p class="text-sm">Integración de Google Maps</p>
        </div>
      </div>
      
    </div>
  </div>
</section>

---
// ContactInfo.astro - Contact information section with details and image
import { Icon } from "astro-icon/components";
import SectionLayout from '../ui/SectionLayout.astro';
import SectionHeader from '../ui/SectionHeader.astro';
---

<SectionLayout id="info" background="white">
  <SectionHeader 
    tagline="Contacto"
    title="Contáctanos"
    description="Estamos aquí para ayudarte con tus proyectos."
  />
  
  <div class="content-stretch flex flex-col lg:flex-row gap-12 lg:gap-20 items-start justify-start relative w-full">
    <div class="basis-0 content-stretch flex flex-col gap-10 grow items-start justify-start max-w-none lg:max-w-[400px] min-h-px min-w-px relative self-stretch w-full">
      <!-- Email Contact -->
      <div class="content-stretch flex flex-col gap-3 lg:gap-4 items-start justify-start relative w-full">
        <div class="overflow-clip relative size-8">
          <Icon name="ph:envelope" class="w-8 h-8 text-[#0c0801]" />
        </div>
        <div class="content-stretch flex flex-col gap-2 items-start justify-start leading-[0] relative text-[#0c0801] w-full">
          <div class="font-['Urbanist:Medium',_sans-serif] font-medium relative text-[18px] lg:text-[26px] tracking-[0.18px] lg:tracking-[0.26px] w-full">
            <p class="leading-[1.2]">Correo</p>
          </div>
          <div class="font-['Heebo:Regular',_sans-serif] font-normal relative text-[14px] lg:text-[18px] w-full">
            <p class="leading-[1.6]">Escríbenos a:</p>
          </div>
          <div class="font-['Heebo:Regular',_sans-serif] font-normal relative text-[14px] lg:text-[18px] w-full">
            <a href="mailto:hola@constructoracarpio.com" class="[text-decoration-skip-ink:none] [text-underline-position:from-font] decoration-solid leading-[1.6] underline text-[#0c0801]">hola@constructoracarpio.com</a>
          </div>
        </div>
      </div>
      
      <!-- Phone Contact -->
      <div class="content-stretch flex flex-col gap-3 lg:gap-4 items-start justify-start relative w-full">
        <div class="overflow-clip relative size-8">
          <Icon name="ph:phone" class="w-8 h-8 text-[#0c0801]" />
        </div>
        <div class="content-stretch flex flex-col gap-2 items-start justify-start leading-[0] relative text-[#0c0801] w-full">
          <div class="font-['Urbanist:Medium',_sans-serif] font-medium relative text-[18px] lg:text-[26px] tracking-[0.18px] lg:tracking-[0.26px] w-full">
            <p class="leading-[1.2]">Teléfono</p>
          </div>
          <div class="font-['Heebo:Regular',_sans-serif] font-normal relative text-[14px] lg:text-[18px] w-full">
            <p class="leading-[1.6]">Llámanos al:</p>
          </div>
          <div class="font-['Heebo:Regular',_sans-serif] font-normal relative text-[14px] lg:text-[18px] w-full">
            <a href="tel:0956324598" class="[text-decoration-skip-ink:none] [text-underline-position:from-font] decoration-solid leading-[1.6] underline text-[#0c0801]">095 632 4598</a>
          </div>
        </div>
      </div>
      
      <!-- Office Location -->
      <div class="content-stretch flex flex-col gap-3 lg:gap-4 items-start justify-start relative w-full">
        <div class="overflow-clip relative size-8">
          <Icon name="ph:map-pin" class="w-8 h-8 text-[#0c0801]" />
        </div>
        <div class="content-stretch flex flex-col gap-4 items-start justify-start relative w-full">
          <div class="content-stretch flex flex-col gap-2 items-start justify-start leading-[0] relative text-[#0c0801] w-full">
            <div class="font-['Urbanist:Medium',_sans-serif] font-medium relative text-[18px] lg:text-[26px] tracking-[0.18px] lg:tracking-[0.26px] w-full">
              <p class="leading-[1.2]">Oficina</p>
            </div>
            <div class="font-['Heebo:Regular',_sans-serif] font-normal relative text-[14px] lg:text-[18px] w-full">
              <p class="leading-[1.6]">Av. Siempre Viva 742, Quito, Ecuador</p>
            </div>
          </div>
          <div class="content-stretch flex flex-col gap-4 items-start justify-start relative">
            <button class="content-stretch flex gap-2 items-center justify-center relative rounded-[100px] bg-transparent border-none cursor-pointer hover:opacity-80 transition-opacity">
              <div class="font-['Heebo:Medium',_sans-serif] font-medium leading-[0] relative text-[#0c0801] text-[14px] lg:text-[18px]">
                <p class="leading-[1.6]">Obtener Direcciones</p>
              </div>
              <div class="overflow-clip relative size-6">
                <Icon name="ph:caret-right" class="w-6 h-6 text-[#0c0801]" />
              </div>
            </button>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Map/Image placeholder -->
    <div class="basis-0 bg-center bg-cover bg-no-repeat grow h-52 lg:h-[516px] min-h-px min-w-px rounded-[40px] w-full" style="background-image: url('/images/placeholder-image.png')" />
  </div>
</SectionLayout>
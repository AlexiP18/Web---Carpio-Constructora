            <div class="font-['Heebo:Regular',_sans-serif] font-normal relative shrink-0 text-[14px] md:text-[20px] w-full">
              <p class="leading-[1.6]">{description}</p>
            </div>
          </div>
        </div>
        <div class="content-stretch flex gap-4 items-start justify-start relative shrink-0">
          <div class="bg-[#d7e6fd] box-border content-stretch flex gap-2 items-center justify-center px-6 py-2.5 relative rounded-[100px] shrink-0">
            <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[102px] shadow-[0px_2px_2px_0px_rgba(12,8,1,0.15)]" />
            <div class="font-['Heebo:Medium',_sans-serif] font-medium leading-[0] relative shrink-0 text-[#0c0801] text-[14px] md:text-[18px] text-nowrap">
              <p class="leading-[1.6] whitespace-pre">Descubre</p>
            </div>
            <div class="absolute inset-0 pointer-events-none shadow-[0px_4px_0px_0px_inset_rgba(255,255,255,0.2),0px_-5px_0px_0px_inset_rgba(12,8,1,0.15)]" />
          </div>
          <div class="bg-[#f2f2f2] box-border content-stretch flex gap-2 items-center justify-center px-6 py-2.5 relative rounded-[100px] shrink-0">
            <div aria-hidden="true" class="absolute border-2 border-[#0c0801] border-solid inset-[-2px] pointer-events-none rounded-[102px] shadow-[0px_2px_2px_0px_rgba(12,8,1,0.15)]" />
            <div class="font-['Heebo:Medium',_sans-serif] font-medium leading-[0] relative shrink-0 text-[#0c0801] text-[14px] md:text-[18px] text-nowrap">
              <p class="leading-[1.6] whitespace-pre">Contáctanos</p>
            </div>
            <div class="absolute inset-0 pointer-events-none shadow-[0px_4px_0px_0px_inset_rgba(255,255,255,0.2),0px_-5px_0px_0px_inset_rgba(12,8,1,0.15)]" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="bg-[#dad9d8] box-border content-stretch flex flex-col gap-12 md:gap-20 items-center justify-start overflow-clip px-5 md:px-16 py-16 md:py-28 relative shrink-0 w-full">
    <div class="content-stretch flex flex-col gap-12 md:gap-20 items-start justify-start max-w-[1280px] relative shrink-0 w-full">
      <div class="content-stretch flex flex-col gap-3 md:gap-4 items-start justify-start max-w-[768px] relative shrink-0 w-full">
        <div class="content-stretch flex items-center justify-start relative shrink-0">
          <div class="font-['Heebo:SemiBold',_sans-serif] font-semibold leading-[0] relative shrink-0 text-[#0c0801] text-[16px] text-nowrap">

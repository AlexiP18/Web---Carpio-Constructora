---
import Layout from "../layouts/Layout.astro";
import Header from '../components/ui/Header.astro';
import Footer from "../components/sections/Footer.astro";
import HeroSection from "../components/sections/nosotros/HeroSection.astro";
import CompanyOverview from "../components/sections/nosotros/CompanyOverview.astro";
import TeamSection from "../components/sections/nosotros/TeamSection.astro";
import TwoColumnSection from "../components/sections/nosotros/TwoColumnSection.astro";
import TestimonialSection from "../components/sections/nosotros/TestimonialSection.astro";
import FeatureBannerSection from "../components/sections/nosotros/FeatureBannerSection.astro";
import CTASection from "../components/sections/nosotros/CTASection.astro";
---

<style>
  /* Animaciones personalizadas para iconos */
  .icon-hover {
    transition: transform 0.3s ease, color 0.3s ease;
  }
  
  .icon-hover:hover {
    transform: scale(1.1) rotate(5deg);
  }
  
  /* Efecto parallax suave */
  .parallax-section {
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  
  /* Hover effects mejorados */
  .team-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .team-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  
  /* Animación de pulso para CTAs */
  .pulse-cta {
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(45, 134, 45, 0.7);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(45, 134, 45, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(45, 134, 45, 0);
    }
  }
</style>

<Layout title="Quiénes Somos | Constructora Carpio">
  <Header />

  <div data-aos="fade-up" data-aos-duration="1000">
    <HeroSection />
  </div>


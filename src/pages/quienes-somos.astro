        <!-- Center image -->
  <div class="bg-center bg-cover bg-no-repeat rounded-[40px] w-full max-w-[335px] aspect-square md:h-[540px] md:w-[540px] md:aspect-auto mx-auto" style={`background-image: url('${imgPlaceholderImage}')`}></div>


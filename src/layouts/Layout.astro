---
export interface Props {
	title?: string;
}

const { title = "Constructora Carpio - Transformamos sueños en estructuras duraderas" } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Constructora Carpio - Transformamos sueños en estructuras duraderas. Expertos en construcción industrial, centros logísticos y más." />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        
        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
        
        <!-- AOS CSS -->
        <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
        
        <!-- Netlify Identity Widget -->
        <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" is:inline></script>
        
        <style is:global>
            html,
            body {
                margin: 0;
                width: 100%;
                height: 100%;
                font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
                scroll-behavior: smooth;
            }
            
            /* Typography hierarchy */
            h1, h2, h3, h4, h5, h6,
            .heading,
            .font-heading {
                font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
                font-weight: 600;
            }
            
            .font-body {
                font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            }
            
            /* Custom scrollbar */
            ::-webkit-scrollbar {
                width: 8px;
            }
            
            ::-webkit-scrollbar-track {
                background: #f1f1f1;
            }
            
            ::-webkit-scrollbar-thumb {
                background: #103646;
                border-radius: 4px;
            }
            
            ::-webkit-scrollbar-thumb:hover {
                background: #D79528;
            }
        </style>
    </head>
    <body>
        <slot />
        
        <!-- AOS JS -->
        <script src="https://unpkg.com/aos@2.3.1/dist/aos.js" is:inline></script>
        
        <!-- Initialize AOS -->
        <script is:inline>
            AOS.init({
                duration: 800,
                easing: 'ease-in-out',
                once: true,
                offset: 100
            });
        </script>
        
        <!-- Netlify Identity -->
        {import.meta.env.PROD && (
            <script is:inline>
                if (window.netlifyIdentity) {
                    window.netlifyIdentity.on("init", user => {
                        if (!user) {
                            window.netlifyIdentity.on("login", () => {
                                document.location.href = "/admin/";
                            });
                        }
                    });
                }
            </script>
        )}
    </body>
</html>